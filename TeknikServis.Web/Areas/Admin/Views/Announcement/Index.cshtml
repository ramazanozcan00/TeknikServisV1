@model IEnumerable<TeknikServis.Core.Entities.Announcement>
@{
    ViewData["Title"] = "Duyuru Yönetimi";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3><i class="fa-solid fa-bullhorn me-2"></i>Duyurular</h3>
    <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Yeni Duyuru</a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="bg-light">
                <tr>
                    <th>Durum</th>
                    <th>Başlık</th>
                    <th>Tarih</th>
                    <th class="text-end">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">Yayında</span>
                            }
                            else
                            {

                                <span class="badge bg-secondary">Pasif</span>
                            }
                        </td>
                        <td class="fw-bold">@item.Title</td>
                        <td>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                        <td class="text-end">
                            <a asp-action="ToggleStatus" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-1">
                                <i class="fa-solid fa-power-off"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>