@model TeknikServis.Core.Entities.Announcement
@{
    ViewData["Title"] = "Yeni Duyuru";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">Yeni Duyuru Ekle</div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Başlık</label>
                        <input asp-for="Title" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">İçerik / Açıklama</label>
                        <textarea asp-for="Content" class="form-control" rows="4"></textarea>
                    </div>
                    <button type="submit" class="btn btn-success w-100">Yayınla</button>
                </form>
            </div>
        </div>
    </div>
</div>