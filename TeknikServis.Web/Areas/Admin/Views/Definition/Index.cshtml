@{
    ViewData["Title"] = "Tanımlamalar";
}

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white fw-bold">Cihaz Türleri</div>
            <div class="card-body">
                <form asp-action="AddType" method="post" class="input-group mb-3">
                    <input type="text" name="name" class="form-control" placeholder="Yeni Tür (Örn: Tablet)" required>
                    <button class="btn btn-success" type="submit">Ekle</button>
                </form>
                <ul class="list-group">
                    @foreach (var item in ViewBag.Types as IEnumerable<TeknikServis.Core.Entities.DeviceType>)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @item.Name
                            <a asp-action="DeleteType" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fa-solid fa-trash"></i></a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark fw-bold">Markalar</div>
            <div class="card-body">
                <form asp-action="AddBrand" method="post" class="input-group mb-3">
                    <input type="text" name="name" class="form-control" placeholder="Yeni Marka (Örn: Xiaomi)" required>
                    <button class="btn btn-success" type="submit">Ekle</button>
                </form>
                <ul class="list-group">
                    @foreach (var item in ViewBag.Brands as IEnumerable<TeknikServis.Core.Entities.DeviceBrand>)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @item.Name
                            <a asp-action="DeleteBrand" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fa-solid fa-trash"></i></a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>