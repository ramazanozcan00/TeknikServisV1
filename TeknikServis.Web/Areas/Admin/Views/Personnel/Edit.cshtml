@model TeknikServis.Web.Models.UserEditViewModel

@{
    ViewData["Title"] = "Personel Düzenle";
}

<div class="container-fluid px-4 py-4">
    <div class="row justify-content-center">
        <div class="col-xl-9 col-lg-10">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-gradient bg-warning text-dark py-4 text-center">
                    <h4 class="mb-1 fw-bold"><i class="fa-solid fa-user-pen me-2"></i>Personel Bilgilerini Düzenle</h4>
                    <p class="mb-0 text-dark-50">Seçilen personelin yetki ve bilgilerini buradan güncelleyebilirsiniz.</p>
                </div>
                <div class="card-body p-5 bg-light bg-opacity-10">

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 shadow-sm mb-4" role="alert"></div>

                        <div class="card border-0 shadow-sm rounded-4 mb-4 bg-white">
                            <div class="card-body p-4">
                                <h6 class="text-primary fw-bold text-uppercase border-bottom pb-2 mb-4">
                                    <i class="fa-solid fa-id-card me-2"></i>Temel Bilgiler
                                </h6>
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <label class="form-label fw-bold text-secondary small">Ad Soyad</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-user text-primary"></i></span>
                                            <input asp-for="FullName" class="form-control border-start-0 ps-0" placeholder="Ad Soyad" />
                                        </div>
                                        <span asp-validation-for="FullName" class="text-danger small ms-1"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label fw-bold text-secondary small">E-Posta</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-envelope text-primary"></i></span>
                                            <input asp-for="Email" class="form-control border-start-0 ps-0" placeholder="E-Posta" />
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger small ms-1"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label fw-bold text-secondary small">Telefon</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-phone text-primary"></i></span>
                                            <input asp-for="PhoneNumber" class="form-control border-start-0 ps-0" placeholder="Telefon" />
                                        </div>
                                        <span asp-validation-for="PhoneNumber" class="text-danger small ms-1"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm rounded-4 mb-4 bg-white">
                            <div class="card-body p-4">
                                <h6 class="text-success fw-bold text-uppercase border-bottom pb-2 mb-4">
                                    <i class="fa-solid fa-building-user me-2"></i>Şube & Yetkiler
                                </h6>
                                <div class="row g-3 mb-3">
                                    <div class="col-md-12">
                                        <label class="form-label fw-bold text-secondary small">Veritabanı</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-white"><i class="fa-solid fa-database text-success"></i></span>
                                            <select id="dbSelect" class="form-select" asp-items="ViewBag.DatabaseList">
                                                <option value="">-- Veritabanı Seçiniz --</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="BranchId" class="form-label fw-bold text-secondary small">Ana Şube</label>
                                        <select asp-for="BranchId" class="form-select" id="branchSelect"></select>
                                        <span asp-validation-for="BranchId" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="UserRole" class="form-label fw-bold text-secondary small">Rol</label>
                                        <select asp-for="UserRole" class="form-select" asp-items="ViewBag.Roles"></select>
                                        <span asp-validation-for="UserRole" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="mb-2">
                                    <label class="form-label fw-bold text-secondary small">Ek Şube Erişimleri</label>
                                    <select asp-for="SelectedBranchIds" class="form-select" id="multiBranchSelect" multiple></select>
                                </div>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm rounded-4 mb-4 bg-white">
                            <div class="card-body p-4">
                                <h6 class="text-muted fw-bold text-uppercase border-bottom pb-2 mb-4">
                                    <i class="fa-solid fa-lock me-2"></i>Şifre İşlemleri
                                </h6>
                                <label class="form-label fw-bold text-secondary small">Yeni Şifre (Değiştirmek istemiyorsanız boş bırakın)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-key text-muted"></i></span>
                                    <input asp-for="Password" type="password" class="form-control border-start-0 ps-0" placeholder="Yeni Şifre" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small ms-1"></span>
                            </div>
                        </div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <div class="card border-0 shadow-sm rounded-4 h-100 bg-white">
                                    <div class="card-body p-4">
                                        <h6 class="fw-bold text-danger mb-3"><i class="fa-solid fa-shield-cat me-2"></i>Güvenlik Doğrulamaları (2FA)</h6>
                                        <div class="d-flex flex-column gap-3 bg-light p-3 rounded-3">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" asp-for="IsEmailAuthEnabled" id="chkEmailAuth_Edit">
                                                <label class="form-check-label fw-bold text-secondary" for="chkEmailAuth_Edit">
                                                    <i class="fa-solid fa-envelope text-primary me-2"></i>E-Posta Doğrulama
                                                </label>
                                            </div>
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" asp-for="IsSmsAuthEnabled" id="chkSmsAuth_Edit">
                                                <label class="form-check-label fw-bold text-secondary" for="chkSmsAuth_Edit">
                                                    <i class="fa-solid fa-comment-sms text-success me-2"></i>SMS Doğrulama
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card border-0 shadow-sm rounded-4 h-100 bg-white">
                                    <div class="card-body p-4">
                                        <h6 class="fw-bold text-secondary mb-3"><i class="fa-solid fa-toggle-on me-2"></i>İşlem Yetkileri</h6>
                                        <div class="d-flex gap-3 flex-wrap">
                                            <div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="CanCreate"><label class="form-check-label text-success fw-bold" asp-for="CanCreate">Ekleme</label></div>
                                            <div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="CanEdit"><label class="form-check-label text-warning fw-bold" asp-for="CanEdit">Düzenleme</label></div>
                                            <div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="CanDelete"><label class="form-check-label text-danger fw-bold" asp-for="CanDelete">Silme</label></div>
                                        </div>
                                        <hr />
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" asp-for="IsSidebarVisible">
                                            <label class="form-check-label text-primary fw-bold" asp-for="IsSidebarVisible">Sol Menü Görünsün</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm rounded-4 mb-4 bg-white">
                            <div class="card-body p-4">
                                <h6 class="fw-bold text-dark mb-4"><i class="fa-solid fa-bars-staggered me-2"></i>Menü Görünürlüğü</h6>
                                <div class="row g-3">
                                    <div class="col-6 col-md-3"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="ShowHome"><label class="form-check-label" asp-for="ShowHome">Ana Sayfa</label></div></div>
                                    <div class="col-6 col-md-3"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="ShowCustomer"><label class="form-check-label" asp-for="ShowCustomer">Müşteriler</label></div></div>
                                    <div class="col-6 col-md-3"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="ShowService"><label class="form-check-label" asp-for="ShowService">Servis</label></div></div>
                                    <div class="col-6 col-md-3"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="ShowStock"><label class="form-check-label" asp-for="ShowStock">Stok</label></div></div>
                                    <div class="col-6 col-md-3"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="ShowBarcode"><label class="form-check-label" asp-for="ShowBarcode">Barkod</label></div></div>
                                    <div class="col-6 col-md-3"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="ShowEDevlet"><label class="form-check-label" asp-for="ShowEDevlet">E-Devlet</label></div></div>
                                    <div class="col-6 col-md-3"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="ShowAudit"><label class="form-check-label" asp-for="ShowAudit">Geçmiş</label></div></div>
                                    <div class="col-6 col-md-3"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="ShowSupport"><label class="form-check-label" asp-for="ShowSupport">Destek</label></div></div>

                                    <div class="col-6 col-md-3">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" asp-for="IsShipmentAuthEnabled">
                                            <label class="form-check-label" asp-for="IsShipmentAuthEnabled">Sevkiyat</label>
                                        </div>
                                    </div>
                                    <div class="col-6 col-md-3">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" asp-for="IsPriceOfferEnabled">
                                            <label class="form-check-label text-success fw-bold" asp-for="IsPriceOfferEnabled">Fiyat Teklifi</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm rounded-4 mb-4 bg-warning bg-opacity-10 border-warning">
                            <div class="card-body p-4">
                                <h6 class="fw-bold text-dark mb-3"><i class="fa-solid fa-battery-half me-2"></i>Kullanım Hakları</h6>
                                <div class="row g-3">
                                    <div class="col-6 col-md-3"><label class="form-label small fw-bold">Fiş</label><input asp-for="PrintBalance" type="number" class="form-control text-center fw-bold border-0 shadow-sm" min="0" /></div>
                                    <div class="col-6 col-md-3"><label class="form-label small fw-bold">Mail</label><input asp-for="MailBalance" type="number" class="form-control text-center fw-bold border-0 shadow-sm" min="0" /></div>
                                    <div class="col-6 col-md-3"><label class="form-label small fw-bold">Müşteri</label><input asp-for="CustomerBalance" type="number" class="form-control text-center fw-bold border-0 shadow-sm" min="0" /></div>
                                    <div class="col-6 col-md-3"><label class="form-label small fw-bold">Servis</label><input asp-for="TicketBalance" type="number" class="form-control text-center fw-bold border-0 shadow-sm" min="0" /></div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-3 mt-4">
                            <a asp-action="Index" class="btn btn-lg btn-light border shadow-sm px-4"><i class="fa-solid fa-arrow-left me-2"></i>Geri Dön</a>
                            <button type="submit" class="btn btn-lg btn-warning shadow-lg px-5 rounded-pill fw-bold text-dark"><i class="fa-solid fa-check me-2"></i>Değişiklikleri Kaydet</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            var branchesData = @Html.Raw(ViewBag.BranchesJson);
            var currentBranchId = '@Model.BranchId';
            var selectedExtraBranches = @Html.Raw(Json.Serialize(Model.SelectedBranchIds));

            $('#multiBranchSelect').select2({ theme: "bootstrap-5", width: '100%', placeholder: "Ek şubeleri seçiniz...", closeOnSelect: false, allowClear: true });

            function populateBranches(selectedDb) {
                var branchSelect = $('#branchSelect');
                var multiSelect = $('#multiBranchSelect');
                branchSelect.empty(); multiSelect.empty();

                if (selectedDb) {
                    var filteredBranches = branchesData.filter(function(b) { return b.DbName === selectedDb; });
                    branchSelect.append('<option value="">-- Şube Seçiniz --</option>');
                    $.each(filteredBranches, function(index, item) {
                        branchSelect.append(new Option(item.Name, item.Id));
                        multiSelect.append(new Option(item.Name, item.Id));
                    });
                } else {
                    branchSelect.append('<option value="">-- Önce Veritabanı Seçiniz --</option>');
                }
                multiSelect.trigger('change');
            }

            var userBranch = branchesData.find(b => b.Id === currentBranchId);
            var userDb = userBranch ? userBranch.DbName : "";

            if (userDb) {
                $('#dbSelect').val(userDb);
                populateBranches(userDb);
                $('#branchSelect').val(currentBranchId);
                if (selectedExtraBranches && selectedExtraBranches.length > 0) {
                    $('#multiBranchSelect').val(selectedExtraBranches).trigger('change');
                }
            }

            $('#dbSelect').on('change', function() { populateBranches($(this).val()); });
        });
    </script>
}