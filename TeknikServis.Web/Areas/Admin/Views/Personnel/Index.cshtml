@model IEnumerable<TeknikServis.Core.Entities.AppUser>

@{
    ViewData["Title"] = "Personel Listesi";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="fw-bold"><i class="fa-solid fa-users-gear me-2 text-primary"></i>Personel Yönetimi</h3>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa-solid fa-user-plus me-1"></i>Yeni Personel
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary small text-uppercase">
                    <tr>
                        <th class="ps-4">Ad Soyad</th>
                        <th>E-Posta</th>
                        <th>Şube</th>
                        <th>Veritabanı</th>
                        <th>Durum</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        // Satır rengi (Pasifse soluk görünsün)
                        string rowClass = item.IsDeleted ? "bg-light text-muted" : "";

                        <tr class="@rowClass">
                            <td class="ps-4 fw-bold">
                                @item.FullName
                            </td>
                            <td>@item.Email</td>
                            <td>
                                <span class="badge bg-light text-dark border">
                                    @(item.Branch?.BranchName ?? "Merkez")
                                </span>
                            </td>

                            <td>
                                @if (item.Branch != null && item.Branch.HasOwnDatabase)
                                {
                                    <div class="d-flex align-items-center">
                                        <i class="fa-solid fa-database text-primary me-2"></i>
                                        <div>
                                            <div class="badge bg-primary bg-opacity-10 text-primary border border-primary mb-1">Özel DB</div>
                                            <div class="small text-muted font-monospace" style="font-size: 11px;">
                                                @(item.Branch.DatabaseName ?? "-")
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="d-flex align-items-center text-muted">
                                        <i class="fa-solid fa-share-nodes me-2 opacity-50"></i>
                                        <span class="badge bg-light text-secondary border">Ortak DB</span>
                                    </div>
                                }
                            </td>
                            <td>
                                @if (!item.IsDeleted)
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success">
                                        <i class="fa-solid fa-check-circle me-1"></i>Aktif
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger">
                                        <i class="fa-solid fa-ban me-1"></i>Pasif
                                    </span>
                                }
                            </td>

                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-dark" title="Düzenle">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>

                                    @if (!item.IsDeleted)
                                    {
                                        <a asp-action="ToggleStatus" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"
                                           onclick="return confirm('Bu personeli PASİFE almak üzeresiniz. Sisteme giriş yapamayacak. Onaylıyor musunuz?')"
                                           title="Pasife Al">
                                            <i class="fa-solid fa-user-slash"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-action="ToggleStatus" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success"
                                           onclick="return confirm('Bu personeli tekrar AKTİF hale getirmek üzeresiniz. Onaylıyor musunuz?')"
                                           title="Aktifleştir">
                                            <i class="fa-solid fa-user-check"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (totalPages > 1)
    {
        <div class="card-footer bg-white py-3 border-top">
            <nav aria-label="Sayfalama">
                <ul class="pagination justify-content-center mb-0 shadow-sm">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link border-0" asp-action="Index" asp-route-page="@(currentPage - 1)"><i class="fa-solid fa-chevron-left small"></i> Önceki</a>
                    </li>

                    @for (int i = 1; i <= totalPages; i++)
                    {
                        if (i == 1 || i == totalPages || (i >= currentPage - 2 && i <= currentPage + 2))
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link border-0 @(i == currentPage ? "fw-bold" : "")" asp-action="Index" asp-route-page="@i">@i</a>
                            </li>
                        }
                        else if (i == currentPage - 3 || i == currentPage + 3)
                        {
                            <li class="page-item disabled"><span class="page-link border-0">...</span></li>
                        }
                    }

                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link border-0" asp-action="Index" asp-route-page="@(currentPage + 1)">Sonraki <i class="fa-solid fa-chevron-right small"></i></a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>