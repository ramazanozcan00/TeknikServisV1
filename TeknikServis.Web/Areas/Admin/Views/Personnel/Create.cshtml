@model TeknikServis.Web.Models.RegisterViewModel

@{
    ViewData["Title"] = "Yeni Personel Ekle";
}

<div class="container-fluid px-4 py-4">
    <div class="row justify-content-center">
        <div class="col-xl-9 col-lg-10">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-gradient bg-primary text-white py-4 text-center">
                    <h4 class="mb-1 fw-bold"><i class="fa-solid fa-user-plus me-2"></i>Yeni Personel Oluştur</h4>
                    <p class="mb-0 text-white-50">Sisteme yeni bir kullanıcı eklemek için bilgileri doldurun.</p>
                </div>
                <div class="card-body p-5 bg-light bg-opacity-10">

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 shadow-sm mb-4" role="alert"></div>

                        <div class="card border-0 shadow-sm rounded-4 mb-4 bg-white">
                            <div class="card-body p-4">
                                <h6 class="text-primary fw-bold text-uppercase border-bottom pb-2 mb-4">
                                    <i class="fa-solid fa-id-card me-2"></i>Kişisel Bilgiler
                                </h6>
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <label class="form-label fw-bold text-secondary small">Ad Soyad</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-user text-primary"></i></span>
                                            <input asp-for="FullName" class="form-control border-start-0 ps-0" placeholder="Örn: Ahmet Yılmaz" />
                                        </div>
                                        <span asp-validation-for="FullName" class="text-danger small ms-1"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label fw-bold text-secondary small">E-Posta</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-envelope text-primary"></i></span>
                                            <input asp-for="Email" class="form-control border-start-0 ps-0" placeholder="ornek@email.com" />
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger small ms-1"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label fw-bold text-secondary small">Telefon</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-phone text-primary"></i></span>
                                            <input asp-for="PhoneNumber" class="form-control border-start-0 ps-0" placeholder="05XX XXX XX XX" />
                                        </div>
                                        <span asp-validation-for="PhoneNumber" class="text-danger small ms-1"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm rounded-4 mb-4 bg-white">
                            <div class="card-body p-4">
                                <h6 class="text-success fw-bold text-uppercase border-bottom pb-2 mb-4">
                                    <i class="fa-solid fa-building-user me-2"></i>Şube & Yetkilendirme
                                </h6>
                                <div class="row g-3 mb-3">
                                    <div class="col-md-12">
                                        <label class="form-label fw-bold text-secondary small">Veritabanı Seçimi</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-white"><i class="fa-solid fa-database text-success"></i></span>
                                            <select id="dbSelect" class="form-select" asp-items="ViewBag.DatabaseList">
                                                <option value="">-- Veritabanı Seçiniz --</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="BranchId" class="form-label fw-bold text-secondary small">Ana Şube</label>
                                        <select asp-for="BranchId" class="form-select" id="branchSelect">
                                            <option value="">-- Veritabanı Bekleniyor --</option>
                                        </select>
                                        <span asp-validation-for="BranchId" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="UserRole" class="form-label fw-bold text-secondary small">Kullanıcı Rolü</label>
                                        <select asp-for="UserRole" class="form-select" asp-items="ViewBag.Roles">
                                            <option value="">-- Rol Seçiniz --</option>
                                        </select>
                                        <span asp-validation-for="UserRole" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="mb-2">
                                    <label class="form-label fw-bold text-secondary small">Ek Şube Yetkileri</label>
                                    <select asp-for="SelectedBranchIds" class="form-select" id="multiBranchSelect" multiple></select>
                                    <div class="form-text">Kullanıcının erişebileceği diğer şubeleri buradan seçebilirsiniz.</div>
                                </div>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm rounded-4 mb-4 bg-white">
                            <div class="card-body p-4">
                                <h6 class="text-danger fw-bold text-uppercase border-bottom pb-2 mb-4">
                                    <i class="fa-solid fa-shield-halved me-2"></i>Güvenlik Ayarları
                                </h6>
                                <div class="row g-3 mb-4">
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold text-secondary small">Şifre</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-lock text-danger"></i></span>
                                            <input asp-for="Password" class="form-control border-start-0 ps-0" type="password" placeholder="******" />
                                        </div>
                                        <span asp-validation-for="Password" class="text-danger small ms-1"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold text-secondary small">Şifre Tekrar</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-key text-danger"></i></span>
                                            <input asp-for="ConfirmPassword" class="form-control border-start-0 ps-0" type="password" placeholder="******" />
                                        </div>
                                        <span asp-validation-for="ConfirmPassword" class="text-danger small ms-1"></span>
                                    </div>
                                </div>

                                <div class="p-3 bg-light rounded-3 border border-light">
                                    <label class="fw-bold mb-3 d-block text-dark">İki Aşamalı Doğrulama (2FA)</label>
                                    <div class="d-flex flex-wrap gap-4">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" asp-for="IsEmailAuthEnabled" id="chkEmailAuth">
                                            <label class="form-check-label fw-bold text-secondary" for="chkEmailAuth">
                                                <i class="fa-solid fa-envelope text-primary me-1"></i> E-Posta ile Doğrulama
                                            </label>
                                        </div>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" asp-for="IsSmsAuthEnabled" id="chkSmsAuth">
                                            <label class="form-check-label fw-bold text-secondary" for="chkSmsAuth">
                                                <i class="fa-solid fa-comment-sms text-success me-1"></i> SMS ile Doğrulama
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-text small mt-2">Kullanıcı giriş yaparken seçilen yöntemlerle doğrulama kodu isteyecektir.</div>
                                </div>
                            </div>
                        </div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <div class="card border-0 shadow-sm rounded-4 h-100 bg-white">
                                    <div class="card-body p-4">
                                        <h6 class="fw-bold text-secondary mb-3"><i class="fa-solid fa-key me-2"></i>İşlem İzinleri</h6>
                                        <div class="d-flex flex-column gap-3">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" asp-for="CanCreate" id="chkCreate">
                                                <label class="form-check-label text-success fw-bold" for="chkCreate">Kayıt Ekleme</label>
                                            </div>
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" asp-for="CanEdit" id="chkEdit">
                                                <label class="form-check-label text-warning fw-bold" for="chkEdit">Düzenleme</label>
                                            </div>
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" asp-for="CanDelete" id="chkDelete">
                                                <label class="form-check-label text-danger fw-bold" for="chkDelete">Silme</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card border-0 shadow-sm rounded-4 h-100 bg-white">
                                    <div class="card-body p-4">
                                        <h6 class="fw-bold text-secondary mb-3"><i class="fa-solid fa-eye me-2"></i>Görünüm Ayarları</h6>
                                        <div class="form-check form-switch mb-3">
                                            <input class="form-check-input" type="checkbox" asp-for="IsSidebarVisible" id="chkSidebar">
                                            <label class="form-check-label text-primary fw-bold" for="chkSidebar">Sol Menü Görünsün</label>
                                        </div>
                                        <p class="small text-muted mb-0">Personelin sol menüyü görüp göremeyeceğini belirler.</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm rounded-4 mb-4 bg-white">
                            <div class="card-body p-4">
                                <h6 class="fw-bold text-dark mb-4"><i class="fa-solid fa-bars-staggered me-2"></i>Menü Görünürlüğü</h6>
                                <div class="row g-3">
                                    <div class="col-6 col-md-3"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="ShowHome"><label class="form-check-label" asp-for="ShowHome">Ana Sayfa</label></div></div>
                                    <div class="col-6 col-md-3"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="ShowCustomer"><label class="form-check-label" asp-for="ShowCustomer">Müşteriler</label></div></div>
                                    <div class="col-6 col-md-3"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="ShowService"><label class="form-check-label" asp-for="ShowService">Servis</label></div></div>
                                    <div class="col-6 col-md-3"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="ShowStock"><label class="form-check-label" asp-for="ShowStock">Stok</label></div></div>
                                    <div class="col-6 col-md-3"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="ShowBarcode"><label class="form-check-label" asp-for="ShowBarcode">Barkod</label></div></div>
                                    <div class="col-6 col-md-3"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="ShowEDevlet"><label class="form-check-label" asp-for="ShowEDevlet">E-Devlet</label></div></div>
                                    <div class="col-6 col-md-3"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="ShowAudit"><label class="form-check-label" asp-for="ShowAudit">Geçmiş</label></div></div>
                                    <div class="col-6 col-md-3"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="ShowSupport"><label class="form-check-label" asp-for="ShowSupport">Destek</label></div></div>

                                    <div class="col-6 col-md-3">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" asp-for="IsShipmentAuthEnabled">
                                            <label class="form-check-label" asp-for="IsShipmentAuthEnabled">Sevkiyat</label>
                                        </div>
                                    </div>
                                    <div class="col-6 col-md-3">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" asp-for="IsPriceOfferEnabled">
                                            <label class="form-check-label text-success fw-bold" asp-for="IsPriceOfferEnabled">Fiyat Teklifi</label>
                                        </div>
                                    </div>

                                    @* Yeni Eklenen Alanlar *@
                                    <div class="col-6 col-md-3">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" asp-for="ShowBranchProfile">
                                            <label class="form-check-label" asp-for="ShowBranchProfile">Şube Profili</label>
                                        </div>
                                    </div>
                                    <div class="col-6 col-md-3">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" asp-for="ShowCompanyInfo">
                                            <label class="form-check-label" asp-for="ShowCompanyInfo">Firma Bilgileri</label>
                                        </div>
                                    </div>
                                    <div class="col-6 col-md-3">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" asp-for="ShowCustomerMovements">
                                            <label class="form-check-label" asp-for="ShowCustomerMovements">Cari Hareketler</label>
                                        </div>
                                    </div>

                                    @* Personel Performans Buraya Taşındı *@
                                    <div class="col-6 col-md-3">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" asp-for="IsPerformanceMenuVisible">
                                            <label class="form-check-label text-info fw-bold" asp-for="IsPerformanceMenuVisible">Performans</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm rounded-4 mb-4 bg-warning bg-opacity-10 border-warning">
                            <div class="card-body p-4">
                                <h6 class="fw-bold text-dark mb-3"><i class="fa-solid fa-coins me-2"></i>Kullanım Bakiyeleri</h6>
                                <div class="row g-3">
                                    <div class="col-6 col-md-3">
                                        <label class="form-label small fw-bold text-muted">Fiş Yazdırma</label>
                                        <input asp-for="PrintBalance" type="number" class="form-control text-center fw-bold border-0 shadow-sm" min="0" />
                                    </div>
                                    <div class="col-6 col-md-3">
                                        <label class="form-label small fw-bold text-muted">Mail Gönderme</label>
                                        <input asp-for="MailBalance" type="number" class="form-control text-center fw-bold border-0 shadow-sm" min="0" />
                                    </div>
                                    <div class="col-6 col-md-3">
                                        <label class="form-label small fw-bold text-muted">Müşteri Kayıt</label>
                                        <input asp-for="CustomerBalance" type="number" class="form-control text-center fw-bold border-0 shadow-sm" min="0" />
                                    </div>
                                    <div class="col-6 col-md-3">
                                        <label class="form-label small fw-bold text-muted">Servis Kayıt</label>
                                        <input asp-for="TicketBalance" type="number" class="form-control text-center fw-bold border-0 shadow-sm" min="0" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-3 mt-4">
                            <a asp-action="Index" class="btn btn-lg btn-light border shadow-sm px-4">
                                <i class="fa-solid fa-xmark me-2"></i>Vazgeç
                            </a>
                            <button type="submit" class="btn btn-lg btn-primary shadow-lg px-5 rounded-pill fw-bold">
                                <i class="fa-solid fa-save me-2"></i>Personeli Kaydet
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            var branchesData = @Html.Raw(ViewBag.BranchesJson);

            $('#multiBranchSelect').select2({
                theme: "bootstrap-5",
                width: '100%',
                placeholder: "Ek şubeleri seçiniz...",
                closeOnSelect: false,
                allowClear: true
            });

            $('#dbSelect').on('change', function() {
                var selectedDb = $(this).val();
                var branchSelect = $('#branchSelect');
                var multiSelect = $('#multiBranchSelect');

                branchSelect.empty();
                multiSelect.empty();

                if (selectedDb) {
                    var filteredBranches = branchesData.filter(function(b) {
                        return b.DbName === selectedDb;
                    });
                    branchSelect.append('<option value="">-- Şube Seçiniz --</option>');
                    $.each(filteredBranches, function(index, item) {
                        branchSelect.append(new Option(item.Name, item.Id));
                        multiSelect.append(new Option(item.Name, item.Id));
                    });
                } else {
                    branchSelect.append('<option value="">-- Veritabanı Seçilmedi --</option>');
                }
                multiSelect.trigger('change');
            });
        });
    </script>
}