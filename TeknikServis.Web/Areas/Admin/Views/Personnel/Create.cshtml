@model TeknikServis.Web.Models.RegisterViewModel

@{
    ViewData["Title"] = "Yeni Personel Ekle";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow border-0">
            <div class="card-header bg-primary text-white py-3">
                <h5 class="mb-0"><i class="fa-solid fa-user-plus me-2"></i>Yeni Personel Oluştur</h5>
            </div>
            <div class="card-body p-4">

                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <h6 class="text-muted text-uppercase small fw-bold border-bottom pb-2 mb-3">Kişisel Bilgiler</h6>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Ad Soyad</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-user text-secondary"></i></span>
                                <input asp-for="FullName" class="form-control" placeholder="Örn: Ahmet Yılmaz" />
                            </div>
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">E-Posta</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-envelope text-secondary"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="ornek@email.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                    </div>

                    <h6 class="text-muted text-uppercase small fw-bold border-bottom pb-2 mb-3 mt-2">Şube & Rol</h6>
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label class="form-label fw-bold text-secondary">Hangi Veritabanı?</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-database"></i></span>
                                <select id="dbSelect" class="form-select" asp-items="ViewBag.DatabaseList">
                                    <option value="">-- Önce Veritabanı Seçiniz --</option>
                                </select>
                            </div>
                            <div class="form-text small">Şubeleri listelemek için önce veritabanını seçin.</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold text-primary">Atanacak Şube</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-building text-primary"></i></span>
                                <select asp-for="BranchId" class="form-select" id="branchSelect">
                                    <option value="">-- Veritabanı Seçilmedi --</option>
                                </select>
                            </div>
                            <span asp-validation-for="BranchId" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold text-danger">Rol</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-user-shield text-danger"></i></span>
                                <select asp-for="UserRole" class="form-select" asp-items="ViewBag.Roles">
                                    <option value="">-- Rol Seçiniz --</option>
                                </select>
                            </div>
                            <span asp-validation-for="UserRole" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold text-secondary">Erişebileceği Diğer Şubeler</label>
                        <select asp-for="SelectedBranchIds" class="form-select" id="multiBranchSelect" multiple></select>
                        <div class="form-text small">Yukarıda seçtiğiniz veritabanına ait diğer şubeleri buradan ekleyebilirsiniz.</div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Şifre</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-lock text-secondary"></i></span>
                                <input asp-for="Password" class="form-control" type="password" placeholder="******" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Şifre Tekrar</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-key text-secondary"></i></span>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="******" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="card bg-light mb-3 border">
                        <div class="card-body py-2">
                            <h6 class="fw-bold text-secondary mb-3"><i class="fa-solid fa-shield-halved me-2"></i>Özel Yetkiler</h6>
                            <div class="d-flex gap-4">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="CanCreate" id="chkCreate">
                                    <label class="form-check-label fw-bold text-success" for="chkCreate">Ekleme</label>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="CanEdit" id="chkEdit">
                                    <label class="form-check-label fw-bold text-warning" for="chkEdit">Düzenleme</label>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="CanDelete" id="chkDelete">
                                    <label class="form-check-label fw-bold text-danger" for="chkDelete">Silme</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card bg-light mb-4 border">
                        <div class="card-body py-2">
                            <h6 class="fw-bold text-primary mb-3"><i class="fa-solid fa-list-check me-2"></i>Menü Görünürlüğü</h6>

                            <div class="row g-3">
                                <div class="col-md-3"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="ShowHome"><label class="form-check-label" asp-for="ShowHome">Ana Sayfa</label></div></div>
                                <div class="col-md-3"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="ShowCustomer"><label class="form-check-label" asp-for="ShowCustomer">Müşteriler</label></div></div>
                                <div class="col-md-3"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="ShowService"><label class="form-check-label" asp-for="ShowService">Servis Kayıtları</label></div></div>
                                <div class="col-md-3">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" asp-for="ShowStock">
                                        <label class="form-check-label" asp-for="ShowStock">Stok / Yedek Parça</label>
                                    </div>
                                </div>
                                <div class="col-md-3"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="ShowBarcode"><label class="form-check-label" asp-for="ShowBarcode">Barkod Tara</label></div></div>
                                <div class="col-md-3"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="ShowEDevlet"><label class="form-check-label" asp-for="ShowEDevlet">E-Devlet</label></div></div>
                                <div class="col-md-3"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="ShowAudit"><label class="form-check-label" asp-for="ShowAudit">Geçmiş İşlemler</label></div></div>
                                <div class="col-md-3"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" asp-for="ShowSupport"><label class="form-check-label" asp-for="ShowSupport">Destek</label></div></div>
                            </div>
                            <div class="form-text small text-muted mt-2">Seçili olmayan menüler bu kullanıcının panelinde gizlenecektir.</div>
                        </div>
                    </div>

                    <div class="card bg-light mb-4 border">
                        <div class="card-body py-2">
                            <h6 class="fw-bold text-danger mb-3"><i class="fa-solid fa-lock me-2"></i>Güvenlik Ayarları</h6>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for="TwoFactorEnabled" id="chk2FA">
                                <label class="form-check-label fw-bold" for="chk2FA">
                                    Girişte Doğrulama Kodu İstensin (2FA)
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="card bg-warning bg-opacity-10 border-warning mb-4">
                        <div class="card-body py-3">
                            <h6 class="fw-bold text-dark mb-3"><i class="fa-solid fa-star me-2"></i>Kullanım Hakları (Deneme Rolü İçin)</h6>
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label class="form-label small fw-bold">Fiş Yazdırma</label>
                                    <input asp-for="PrintBalance" type="number" class="form-control text-center fw-bold" min="0" value="3" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label small fw-bold">Mail Gönderme</label>
                                    <input asp-for="MailBalance" type="number" class="form-control text-center fw-bold" min="0" value="3" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label small fw-bold">Müşteri Kayıt</label>
                                    <input asp-for="CustomerBalance" type="number" class="form-control text-center fw-bold" min="0" value="3" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label small fw-bold">Servis Kayıt</label>
                                    <input asp-for="TicketBalance" type="number" class="form-control text-center fw-bold" min="0" value="3" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between gap-2">
                        <a asp-action="Index" class="btn btn-light border px-4">
                            <i class="fa-solid fa-arrow-left me-2"></i>İptal
                        </a>
                        <button type="submit" class="btn btn-success px-5 fw-bold shadow-sm">
                            <i class="fa-solid fa-check me-2"></i>Personeli Kaydet
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            // JSON Verisini Al (Raw HTML decode edilerek)
            var branchesData = @Html.Raw(ViewBag.BranchesJson);

            // Select2 Başlat
            $('#multiBranchSelect').select2({
                theme: "bootstrap-5",
                width: '100%',
                placeholder: "Ek şubeleri seçiniz...",
                closeOnSelect: false
            });

            // Veritabanı Seçildiğinde Çalışacak Fonksiyon
            $('#dbSelect').on('change', function() {
                var selectedDb = $(this).val();
                var branchSelect = $('#branchSelect');
                var multiSelect = $('#multiBranchSelect');

                // Temizle
                branchSelect.empty();
                multiSelect.empty();

                if (selectedDb) {
                    // Filtrele
                    var filteredBranches = branchesData.filter(function(b) {
                        return b.DbName === selectedDb;
                    });

                    branchSelect.append('<option value="">-- Şube Seçiniz --</option>');

                    // Doldur
                    $.each(filteredBranches, function(index, item) {
                        branchSelect.append(new Option(item.Name, item.Id));
                        multiSelect.append(new Option(item.Name, item.Id));
                    });

                    // Select2'yi güncelle
                    multiSelect.trigger('change');
                } else {
                    branchSelect.append('<option value="">-- Veritabanı Seçilmedi --</option>');
                }
            });
        });
    </script>
}