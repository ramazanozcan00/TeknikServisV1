@model TeknikServis.Core.Entities.SmsSetting
@{
    ViewData["Title"] = "SMS Ayarları";
    var branches = ViewBag.Branches as List<TeknikServis.Core.Entities.Branch>;
    var selectedBranchId = (Guid)ViewBag.SelectedBranchId;
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card shadow-sm border-info">
                <div class="card-body d-flex align-items-center justify-content-between p-3">
                    <div>
                        <h5 class="mb-0 text-info"><i class="fa-solid fa-code-branch me-2"></i>Ayar Yapılacak Şube</h5>
                        <small class="text-muted">Ayarları düzenlemek istediğiniz şubeyi seçiniz.</small>
                    </div>
                    <div style="width: 300px;">
                        <select class="form-select fw-bold" onchange="window.location.href='?branchId='+this.value">
                            @if (branches != null && branches.Any())
                            {
                                foreach (var branch in branches)
                                {
                                    if (branch.Id == selectedBranchId)
                                    {
                                        <option value="@branch.Id" selected>@branch.BranchName</option>
                                    }
                                    else
                                    {
                                        <option value="@branch.Id">@branch.BranchName</option>
                                    }
                                }
                            }
                            else
                            {
                                <option disabled>Şube bulunamadı</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 text-primary"><i class="fa-solid fa-comment-sms me-2"></i>SMS Sağlayıcı Ayarları</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="BranchId" value="@selectedBranchId" />
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="SmsTitle" class="form-label fw-bold"></label>
                        <input asp-for="SmsTitle" class="form-control" placeholder="Örn: TEKNIKSV" />
                        <span asp-validation-for="SmsTitle" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="ApiUrl" class="form-label fw-bold"></label>
                        <input asp-for="ApiUrl" class="form-control" placeholder="https://api.iletimerkezi.com/v1/send-sms" />
                        <span asp-validation-for="ApiUrl" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="ApiUsername" class="form-label fw-bold"></label>
                        <input asp-for="ApiUsername" class="form-control" />
                        <span asp-validation-for="ApiUsername" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="ApiPassword" class="form-label fw-bold"></label>
                        <input asp-for="ApiPassword" class="form-control" type="password" value="@Model.ApiPassword" placeholder="Değiştirmek istemiyorsanız boş bırakın" />
                        <span asp-validation-for="ApiPassword" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Aktif Et</label>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary"><i class="fa-solid fa-save me-2"></i>Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>