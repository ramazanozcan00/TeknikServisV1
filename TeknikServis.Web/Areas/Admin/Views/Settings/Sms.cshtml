@model TeknikServis.Core.Entities.SmsSetting

@{
    ViewData["Title"] = "SMS Ayarları";
}

<div class="container-fluid px-4 py-4">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden mb-4">
                <div class="card-header bg-gradient bg-primary text-white py-4 d-flex align-items-center justify-content-between">
                    <div>
                        <h4 class="mb-1 fw-bold"><i class="fa-solid fa-comment-sms me-2"></i>SMS Yapılandırması</h4>
                        <p class="mb-0 text-white-50">Sistem bildirimleri ve doğrulama kodları için SMS sağlayıcı ayarları.</p>
                    </div>
                    <div class="d-none d-md-block">
                        <i class="fa-solid fa-tower-cell fa-3x text-white-50"></i>
                    </div>
                </div>
            </div>

            <form asp-action="Sms" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />

                <div class="row">
                    <div class="col-md-8">
                        <div class="card border-0 shadow-sm rounded-4 h-100">
                            <div class="card-body p-4">
                                <h6 class="text-primary fw-bold text-uppercase border-bottom pb-2 mb-4">
                                    <i class="fa-solid fa-sliders me-2"></i>API Bağlantı Bilgileri
                                </h6>

                                <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 shadow-sm mb-4"></div>

                                <div class="form-floating mb-3">
                                    <input asp-for="SmsTitle" class="form-control" placeholder="Başlık" />
                                    <label asp-for="SmsTitle">SMS Başlığı (Originator)</label>
                                    <span asp-validation-for="SmsTitle" class="text-danger small ms-1"></span>
                                    <div class="form-text small"><i class="fa-solid fa-circle-info me-1"></i>Mesajın kimden gittiğini belirten başlık (Örn: TEKNIKSVS).</div>
                                </div>

                                <div class="row g-3 mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input asp-for="ApiUsername" class="form-control" placeholder="Kullanıcı Adı" />
                                            <label asp-for="ApiUsername">API Kullanıcı Adı / No</label>
                                        </div>
                                        <span asp-validation-for="ApiUsername" class="text-danger small ms-1"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input asp-for="ApiPassword" type="password" class="form-control" placeholder="Şifre" value="@Model.ApiPassword" />
                                            <label asp-for="ApiPassword">API Şifre / Key</label>
                                        </div>
                                        <span asp-validation-for="ApiPassword" class="text-danger small ms-1"></span>
                                    </div>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="ApiUrl" class="form-control font-monospace text-muted" placeholder="API URL" />
                                    <label asp-for="ApiUrl">API Endpoint URL</label>
                                    <span asp-validation-for="ApiUrl" class="text-danger small ms-1"></span>
                                </div>

                                <div class="form-check form-switch p-3 bg-light rounded-3 border">
                                    <input class="form-check-input ms-0 me-3" type="checkbox" asp-for="IsActive" style="float:none;">
                                    <label class="form-check-label fw-bold text-dark" asp-for="IsActive">
                                        SMS Servisi Aktif
                                    </label>
                                    <div class="small text-muted mt-1">Bu seçenek kapatılırsa, sistem SMS göndermeyi durdurur.</div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm rounded-4 mb-3 bg-info bg-opacity-10 border-info">
                            <div class="card-body p-4">
                                <h6 class="fw-bold text-dark mb-3"><i class="fa-solid fa-circle-question me-2"></i>Nasıl Çalışır?</h6>
                                <p class="small text-muted mb-0">
                                    Girdiğiniz bilgiler, personel doğrulama (2FA) ve müşteri bilgilendirmelerinde kullanılır.
                                </p>
                                <hr class="border-secondary opacity-25 my-3">
                                <p class="small text-muted mb-0">
                                    <i class="fa-solid fa-lock me-1"></i> Şifreniz veritabanında güvenli bir şekilde saklanır.
                                </p>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm rounded-4">
                            <div class="card-body p-4">
                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-primary btn-lg shadow-sm fw-bold">
                                        <i class="fa-solid fa-save me-2"></i>Ayarları Kaydet
                                    </button>
                                    <a href="/Admin/Home" class="btn btn-light border text-muted">
                                        <i class="fa-solid fa-arrow-left me-2"></i>İptal
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>