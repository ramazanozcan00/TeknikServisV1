@model TeknikServis.Core.Entities.EmailSetting

@{
    ViewData["Title"] = "Mail Ayarları";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow border-0">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="fa-solid fa-envelope-open-text me-2"></i>Sistem Mail Ayarları</h5>
            </div>
            <div class="card-body p-4">

                <div class="alert alert-info small">
                    <i class="fa-solid fa-circle-info me-1"></i>
                    Burada yapacağınız değişiklikler, sistemin mail gönderim altyapısını (Bildirimler, Şifre Sıfırlama vb.) etkiler.
                </div>

                <form asp-action="Email" method="post">

                    <div class="mb-3">
                        <label class="form-label fw-bold">SMTP Sunucusu (Host)</label>
                        <input asp-for="SmtpHost" class="form-control" placeholder="Örn: smtp.gmail.com" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">SMTP Port</label>
                        <input asp-for="SmtpPort" class="form-control" placeholder="Örn: 587" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Gönderen E-Posta</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-at"></i></span>
                            <input asp-for="SenderEmail" class="form-control" placeholder="teknik@servis.com" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Şifre / Uygulama Şifresi</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-key"></i></span>
                            <input asp-for="SenderPassword" type="password" class="form-control" value="@Model.SenderPassword" required />
                        </div>
                    </div>

                    <div class="mb-4 form-check form-switch">
                        <input class="form-check-input" type="checkbox" asp-for="EnableSsl" id="sslCheck">
                        <label class="form-check-label" for="sslCheck">SSL/TLS Kullan (Güvenli Bağlantı)</label>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">
                            <i class="fa-solid fa-save me-2"></i>Ayarları Kaydet
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>