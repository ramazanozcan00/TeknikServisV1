@model IEnumerable<TeknikServis.Core.Entities.Branch>

@{
    ViewData["Title"] = "Şubeler";
    // HATA ÇÖZÜMÜ: (int?) cast işlemi eklenerek null kontrolü sağlandı
    var statusDict = ViewBag.StatusDict as Dictionary<Guid, string>;
    int currentPage = (int?)ViewBag.CurrentPage ?? 1;
    int totalPages = (int?)ViewBag.TotalPages ?? 1;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="fw-bold"><i class="fa-solid fa-building me-2 text-warning"></i>Şube Yönetimi</h3>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa-solid fa-plus me-1"></i>Yeni Şube Ekle
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary small text-uppercase">
                    <tr>
                        <th class="ps-4">Şube Adı</th>
                        <th>Veritabanı</th>
                        <th>Durum</th>
                        <th>İletişim</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        string status = (statusDict != null && statusDict.ContainsKey(item.Id)) ? statusDict[item.Id] : "Unknown";

                        <tr>
                            <td class="ps-4 fw-bold text-dark">@item.BranchName</td>

                            <td>
                                @if (item.HasOwnDatabase)
                                {
                                    <div class="d-flex align-items-center">
                                        <i class="fa-solid fa-database text-primary me-2"></i>
                                        <div>
                                            <div class="badge bg-primary bg-opacity-10 text-primary border border-primary mb-1">Özel DB</div>
                                            <div class="small text-muted font-monospace" style="font-size: 11px;">
                                                @(item.DatabaseName ?? "Tanımsız")
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="d-flex align-items-center text-muted">
                                        <i class="fa-solid fa-share-nodes me-2 opacity-50"></i>
                                        <span class="badge bg-light text-secondary border">Ortak DB</span>
                                    </div>
                                }
                            </td>

                            <td>
                                @if (status == "Online")
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success"><i class="fa-solid fa-wifi me-1"></i>Çevrimiçi</span>
                                }
                                else if (status == "Offline")
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger"><i class="fa-solid fa-circle-exclamation me-1"></i>Erişilemiyor</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary bg-opacity-10 text-secondary border"><i class="fa-solid fa-link me-1"></i>Merkezi</span>
                                }
                            </td>

                            <td>
                                <div class="small text-dark fw-bold"><i class="fa-solid fa-phone me-1 text-secondary"></i>@item.Phone</div>
                                <div class="small text-muted text-truncate" style="max-width: 200px;">@item.Address</div>
                            </td>

                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-dark" title="Düzenle">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (totalPages > 1)
    {
        <div class="card-footer bg-white py-3 border-top">
            <nav aria-label="Sayfalama">
                <ul class="pagination justify-content-center mb-0 shadow-sm">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link border-0" asp-action="Index" asp-route-page="@(currentPage - 1)"><i class="fa-solid fa-chevron-left small"></i> Önceki</a>
                    </li>

                    @for (int i = 1; i <= totalPages; i++)
                    {
                        if (i == 1 || i == totalPages || (i >= currentPage - 2 && i <= currentPage + 2))
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link border-0 @(i == currentPage ? "fw-bold" : "")" asp-action="Index" asp-route-page="@i">@i</a>
                            </li>
                        }
                        else if (i == currentPage - 3 || i == currentPage + 3)
                        {
                            <li class="page-item disabled"><span class="page-link border-0">...</span></li>
                        }
                    }

                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link border-0" asp-action="Index" asp-route-page="@(currentPage + 1)">Sonraki <i class="fa-solid fa-chevron-right small"></i></a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>