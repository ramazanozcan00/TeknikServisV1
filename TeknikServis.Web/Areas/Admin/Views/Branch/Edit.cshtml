@model TeknikServis.Core.Entities.Branch

@{
    ViewData["Title"] = "Şube Düzenle";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow border-0">
            <div class="card-header bg-warning text-dark py-3">
                <h5 class="mb-0"><i class="fa-solid fa-pen-to-square me-2"></i>Şube Bilgilerini Düzenle</h5>
            </div>
            <div class="card-body p-4">

                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />

                    <h6 class="fw-bold text-secondary mb-3 border-bottom pb-2">Temel Bilgiler</h6>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Şube Adı</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa-solid fa-tag text-secondary"></i></span>
                            <input asp-for="BranchName" class="form-control" required />
                        </div>
                        <span asp-validation-for="BranchName" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Telefon</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa-solid fa-phone text-secondary"></i></span>
                            <input asp-for="Phone" class="form-control" />
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Adres</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa-solid fa-map-location-dot text-secondary"></i></span>
                            <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                        </div>
                    </div>

                    <div class="card bg-light border mb-4">
                        <div class="card-body">
                            <h6 class="fw-bold text-dark mb-3"><i class="fa-solid fa-database me-2"></i>Veritabanı Durumu</h6>

                            <div class="mb-3">
                                <label class="form-label small fw-bold text-muted">Yapılandırma Türü</label>
                                @if (Model.HasOwnDatabase)
                                {
                                    <div class="alert alert-success py-2 px-3 mb-0 d-flex align-items-center border-success">
                                        <i class="fa-solid fa-server me-2"></i>
                                        <span><strong>Özel Veritabanı</strong> (İzole)</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-secondary py-2 px-3 mb-0 d-flex align-items-center border-secondary">
                                        <i class="fa-solid fa-share-nodes me-2"></i>
                                        <span><strong>Ortak Veritabanı</strong> (Paylaşımlı)</span>
                                    </div>
                                }
                            </div>

                            <div class="mb-0">
                                <label class="form-label small fw-bold text-muted">Bağlı Veritabanı Adı</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white text-primary"><i class="fa-solid fa-database"></i></span>
                                    <input type="text" class="form-control bg-white font-monospace" value="@(Model.DatabaseName ?? "Ana Veritabanı")" readonly />
                                </div>
                                <div class="form-text small text-muted mt-1">
                                    <i class="fa-solid fa-lock me-1"></i>Veri güvenliği nedeniyle veritabanı bağlantısı buradan değiştirilemez.
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary px-4">
                            <i class="fa-solid fa-arrow-left me-2"></i>Listeye Dön
                        </a>
                        <button type="submit" class="btn btn-warning px-4 fw-bold shadow-sm">
                            <i class="fa-solid fa-check me-2"></i>Değişiklikleri Kaydet
                        </button>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>