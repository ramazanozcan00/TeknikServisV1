@model TeknikServis.Core.Entities.PriceOffer
@{
    Layout = null;
    var info = ViewBag.BranchInfo as TeknikServis.Core.Entities.BranchInfo;
    var branch = Model.Branch;
    bool isEmail = ViewBag.IsEmail == true;

    string title = "Teknik Servis";
    string address = "";
    string phone = "";
    string email = "";
    string taxInfo = "";

    if (info != null)
    {
        if (info.AccountType == TeknikServis.Core.Entities.AccountType.Individual)
            title = $"{info.FirstName} {info.LastName}";
        else
            title = info.CompanyName;

        address = info.Address;
        phone = info.Phone;
        email = info.Email;

        if (!string.IsNullOrEmpty(info.TaxNumber))
            taxInfo = $"{info.TaxOffice} / {info.TaxNumber}";
        else if (!string.IsNullOrEmpty(info.TCNo))
            taxInfo = $"TC: {info.TCNo}";
    }
    else if (branch != null)
    {
        title = branch.BranchName;
        address = branch.Address;
        phone = branch.Phone;
    }
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Fiyat Teklifi - @Model.DocumentNo</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #fff;
            color: #333;
            -webkit-print-color-adjust: exact;
        }

        .invoice-box {
            max-width: 800px;
            margin: auto;
            padding: 40px;
            border: 1px solid #eee;
            box-shadow: 0 0 15px rgba(0, 0, 0, .05);
            font-size: 15px;
            line-height: 24px;
            color: #555;
            background: #fff;
        }

        .invoice-header {
            display: flex;
            justify-content: space-between;
            align-items: start;
            margin-bottom: 40px;
            border-bottom: 2px solid #f8f9fa;
            padding-bottom: 20px;
        }

        .company-info h2 {
            margin: 0;
            color: #2c3e50;
            font-weight: 800;
            font-size: 1.6rem;
            letter-spacing: -0.5px;
            text-transform: uppercase;
        }

        .company-meta {
            font-size: 0.9rem;
            color: #666;
            margin-top: 8px;
        }

        .offer-details {
            text-align: right;
        }

            .offer-details h4 {
                margin: 0;
                color: #2563eb;
                font-weight: 700;
                letter-spacing: 1px;
            }

        .offer-meta {
            margin-top: 10px;
            font-size: 0.9rem;
        }

        .client-section {
            margin-bottom: 30px;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 8px;
            border-left: 4px solid #2563eb;
        }

        .client-label {
            font-size: 0.75rem;
            font-weight: 700;
            color: #888;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 5px;
        }

        .client-name {
            font-weight: 700;
            font-size: 1.1rem;
            color: #333;
            margin: 0;
        }

        .table thead th {
            background-color: #2563eb !important;
            color: #fff !important;
            border: none;
            font-weight: 600;
            padding: 12px;
        }

        .table tbody td {
            padding: 12px;
            border-bottom: 1px solid #eee;
            vertical-align: middle;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(0,0,0,.02);
        }

        .total-section {
            display: flex;
            justify-content: flex-end;
            margin-top: 20px;
        }

        .total-box {
            width: 280px;
        }

        .total-row {
            display: flex;
            justify-content: space-between;
            padding: 5px 0;
        }

            .total-row.grand-total {
                border-top: 2px solid #333;
                margin-top: 10px;
                padding-top: 10px;
                font-weight: 800;
                font-size: 1.1rem;
                color: #2563eb;
            }

        .signature-section {
            margin-top: 60px;
            display: flex;
            justify-content: space-between;
            page-break-inside: avoid;
        }

        .signature-box {
            width: 220px;
            text-align: center;
        }

        .signature-line {
            border-top: 1px solid #ccc;
            margin-top: 40px;
        }

        .signature-title {
            font-size: 0.85rem;
            font-weight: 700;
            color: #555;
            text-transform: uppercase;
            display: block;
            margin-bottom: 5px;
        }
        @@media print {
            .no-print

        {
            display: none !important;
        }

        .invoice-box {
            box-shadow: none;
            border: none;
            padding: 0;
            margin: 0;
            width: 100%;
            max-width: 100%;
        }

        body {
            margin: 0;
            padding: 20px;
        }

        }
    </style>
</head>
<body>

    @if (!isEmail)
    {
        <div class="container text-center mt-3 mb-4 no-print" data-html2canvas-ignore="true">
            <div class="btn-group shadow-sm">
                <button onclick="window.print()" class="btn btn-primary">
                    <i class="fa-solid fa-print me-2"></i>Yazdır
                </button>
                <button onclick="saveAsPdf()" class="btn btn-danger">
                    <i class="fa-solid fa-file-pdf me-2"></i>PDF Kaydet
                </button>
                <button onclick="sendMail()" id="btnMail" class="btn btn-success">
                    <i class="fa-solid fa-envelope me-2"></i>Mail Gönder
                </button>
                <button onclick="window.close()" class="btn btn-light border">
                    <i class="fa-solid fa-xmark me-2"></i>Kapat
                </button>
            </div>
        </div>
    }

    <div class="invoice-box" id="invoiceArea">
        <div class="invoice-header">
            <div class="company-info">
                <h2>@title</h2>
                <div class="company-meta">
                    @if (!string.IsNullOrEmpty(address))
                    {
                        <div>@address</div>
                    }
                    <div class="mt-1">
                        @if (!string.IsNullOrEmpty(phone))
                        {
                            <span class="me-3"><i class="fa-solid fa-phone me-1 text-muted"></i>@phone</span>
                        }
                        @if (!string.IsNullOrEmpty(email))
                        {
                            <span><i class="fa-solid fa-envelope me-1 text-muted"></i>@email</span>
                        }
                    </div>
                    @if (!string.IsNullOrEmpty(taxInfo))
                    {
                        <div class="mt-1 small text-muted"><i class="fa-solid fa-building me-1"></i>@taxInfo</div>
                    }
                </div>
            </div>

            <div class="offer-details">
                <h4>FİYAT TEKLİFİ</h4>
                <div class="offer-meta">
                    <div><strong>No:</strong> #@Model.DocumentNo</div>
                    <div><strong>Tarih:</strong> @Model.OfferDate.ToString("dd.MM.yyyy")</div>
                    <div><strong>Geçerlilik:</strong> @Model.ValidUntil.ToString("dd.MM.yyyy")</div>
                </div>
            </div>
        </div>

        <div class="client-section">
            <div class="client-label">Sayın / Firma</div>
            <h3 class="client-name">
                @if (!string.IsNullOrEmpty(Model.Customer.CompanyName))
                {
                    @Model.Customer.CompanyName
                }
                else
                {
                    @($"{Model.Customer.FirstName} {Model.Customer.LastName}")
                }
            </h3>
            <div class="row mt-2 small text-muted">
                @if (!string.IsNullOrEmpty(Model.Customer.Address))
                {
                    <div class="col-12 mb-1">@Model.Customer.Address</div>
                }
                <div class="col-auto">
                    @if (!string.IsNullOrEmpty(Model.Customer.Phone))
                    {
                        <span class="me-3">Tel: @Model.Customer.Phone</span>
                    }
                    @if (!string.IsNullOrEmpty(Model.Customer.Email))
                    {
                        <span>E-Posta: @Model.Customer.Email</span>
                    }
                </div>
                @if (!string.IsNullOrEmpty(Model.Customer.TaxNumber))
                {
                    <div class="col-12 mt-1">Vergi: @Model.Customer.TaxOffice / @Model.Customer.TaxNumber</div>
                }
            </div>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 5%">#</th>
                    <th style="width: 50%">Açıklama / Ürün Adı</th>
                    <th class="text-center" style="width: 10%">Miktar</th>
                    <th class="text-end" style="width: 15%">Birim Fiyat</th>
                    <th class="text-end" style="width: 20%">Tutar</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items != null)
                {
                    int i = 1;
                    foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.ProductName</td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-end">@item.UnitPrice.ToString("N2") ₺</td>
                            <td class="text-end fw-bold">@item.TotalPrice.ToString("N2") ₺</td>
                        </tr>
                        i++;
                    }
                }
            </tbody>
        </table>

        <div class="total-section">
            <div class="total-box">
                <div class="total-row">
                    <span>Ara Toplam:</span>
                    <span>@Model.TotalAmount.ToString("N2") ₺</span>
                </div>
                <div class="total-row text-muted">
                    <span>KDV (%20):</span>
                    <span>@((Model.TotalAmount * 0.20m).ToString("N2")) ₺</span>
                </div>
                <div class="total-row grand-total">
                    <span>GENEL TOPLAM:</span>
                    <span>@((Model.TotalAmount * 1.20m).ToString("N2")) ₺</span>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Notes))
        {
            <div class="mt-5 pt-3 border-top">
                <strong class="text-muted small d-block mb-1">NOTLAR:</strong>
                <p class="small text-muted fst-italic m-0">@Model.Notes</p>
            </div>
        }

        <div class="signature-section">
            <div class="signature-box">
                <span class="signature-title">Teslim Alan / Onaylayan</span>
                <div class="signature-line"></div>
            </div>
            <div class="signature-box">
                <span class="signature-title">Teklif Veren / Yetkili</span>
                <div class="fw-bold mt-4 mb-2">@ViewBag.PersonnelName</div>
                <div class="signature-line" style="margin-top: 5px;"></div>
            </div>
        </div>

        @if (!isEmail)
        {
            <div class="text-center mt-5 no-print text-muted small" style="opacity: 0.6;">
                Bu belge bilişim sisteminde oluşturulmuştur.
            </div>
        }
    </div>

    @if (!isEmail)
    {
        <script>
            function saveAsPdf() {
                var element = document.getElementById('invoiceArea');
                var opt = {
                    margin:       0.3,
                    // DÜZELTME BURADA YAPILDI:
                    filename:     'Teklif_@(Model.DocumentNo).pdf',
                    image:        { type: 'jpeg', quality: 0.98 },
                    html2canvas:  { scale: 2 },
                    jsPDF:        { unit: 'in', format: 'a4', orientation: 'portrait' }
                };
                html2pdf().set(opt).from(element).save();
            }

            function sendMail() {
                var email = '@Model.Customer.Email';
                if (!email) {
                    alert('Müşterinin e-posta adresi bulunamadı!');
                    return;
                }

                if(!confirm('Bu teklifi ' + email + ' adresine göndermek istediğinize emin misiniz?')) return;

                var btn = $('#btnMail');
                var originalText = btn.html();

                btn.prop('disabled', true);
                btn.html('<i class="fa-solid fa-spinner fa-spin me-2"></i>Gönderiliyor...');

                $.post('/PriceOffer/SendOfferMail', { id: '@Model.Id' }, function(res) {
                    alert(res.message);
                    btn.prop('disabled', false);
                    btn.html(originalText);
                }).fail(function() {
                    alert('Sunucu hatası oluştu.');
                    btn.prop('disabled', false);
                    btn.html(originalText);
                });
            }
        </script>
    }
</body>
</html>