@model IEnumerable<TeknikServis.Core.Entities.PriceOffer>

@{
    ViewData["Title"] = "Fiyat Teklifleri";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary mb-0"><i class="fa-solid fa-file-invoice me-2"></i>Fiyat Teklifleri</h2>
            <p class="text-muted small mb-0">Oluşturulan tüm teklifleri buradan yönetebilirsiniz.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus me-2"></i>Yeni Teklif Oluştur
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="ps-4">Belge No</th>
                            <th>Tarih</th>
                            <th>Müşteri / Cari</th>
                            <th>Şube</th>
                            <th class="text-end">Tutar</th>
                            <th class="text-center">Durum</th>
                            <th class="text-end pe-4">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-primary">@item.DocumentNo</td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span>@item.OfferDate.ToString("dd.MM.yyyy")</span>
                                            @if (item.GetType().GetProperty("ValidUntil") != null)
                                            {
                                                <small class="text-muted" style="font-size:11px;">Bitiş: @(((DateTime)item.GetType().GetProperty("ValidUntil").GetValue(item, null)).ToString("dd.MM.yyyy"))</small>
                                            }
                                        </div>
                                    </td>

                                    <td>
                                        @if (item.Customer != null)
                                        {
                                            @if (!string.IsNullOrEmpty(item.Customer.CompanyName))
                                            {
                                                // Kurumsal Müşteri: Firma Adı Kalın, Yetkili Adı Küçük
                                                <div class="d-flex flex-column">
                                                    <span class="fw-bold text-dark">
                                                        <i class="fa-solid fa-building me-1 text-secondary" style="font-size:0.8em;"></i>
                                                        @item.Customer.CompanyName
                                                    </span>
                                                    @if (!string.IsNullOrEmpty(item.Customer.FirstName) && item.Customer.FirstName != "Firma")
                                                    {
                                                        <small class="text-muted" style="font-size:11px;">
                                                            Yetkili: @item.Customer.FirstName @item.Customer.LastName
                                                        </small>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                // Bireysel Müşteri: Sadece Ad Soyad
                                                <span class="fw-medium">
                                                    <i class="fa-solid fa-user me-1 text-secondary" style="font-size:0.8em;"></i>
                                                    @item.Customer.FirstName @item.Customer.LastName
                                                </span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">- Müşteri Silinmiş -</span>
                                        }
                                    </td>

                                    <td>
                                        @if (item.Branch != null)
                                        {
                                            <span class="badge bg-light text-dark border">@item.Branch.BranchName</span>
                                        }
                                    </td>
                                    <td class="text-end fw-bold">
                                        @item.TotalAmount.ToString("C2")
                                    </td>
                                    <td class="text-center">
                                        @{
                                            string sStatus = item.Status.ToString();
                                            string badgeClass = "bg-secondary";
                                            string statusLabel = "Taslak";

                                            if (sStatus == "Sent" || sStatus == "Gonderildi")
                                            {
                                                badgeClass = "bg-info text-dark";
                                                statusLabel = "Gönderildi";
                                            }
                                            else if (sStatus == "Approved" || sStatus == "Onaylandi")
                                            {
                                                badgeClass = "bg-success";
                                                statusLabel = "Onaylandı";
                                            }
                                            else if (sStatus == "Rejected" || sStatus == "Reddedildi")
                                            {
                                                badgeClass = "bg-danger";
                                                statusLabel = "Reddedildi";
                                            }
                                        }
                                        <span class="badge rounded-pill @badgeClass">@statusLabel</span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group">
                                            <a asp-action="Print" asp-route-id="@item.Id" target="_blank" class="btn btn-sm btn-outline-secondary" title="Yazdır">
                                                <i class="fa-solid fa-print"></i>
                                            </a>

                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Düzenle">
                                                <i class="fa-solid fa-pen"></i>
                                            </a>

                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bu teklifi silmek istediğinize emin misiniz?');" title="Sil">
                                                <i class="fa-solid fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5 text-muted">
                                    <i class="fa-solid fa-folder-open fa-3x mb-3 text-secondary opacity-50"></i>
                                    <p>Henüz kayıtlı bir fiyat teklifi bulunmuyor.</p>
                                    <a asp-action="Create" class="btn btn-sm btn-outline-primary">İlk Teklifi Oluştur</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white border-top-0 py-3">
            <small class="text-muted">Toplam @(Model?.Count() ?? 0) kayıt listelendi.</small>
        </div>
    </div>
</div>