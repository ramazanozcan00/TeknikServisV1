@model TeknikServis.Core.Entities.CustomerMovement

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-warning py-3">
                    <h5 class="mb-0 fw-bold text-dark"><i class="fa-solid fa-edit me-2"></i>Hareket Düzenle</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" /> @* ID mutlaka gönderilmeli *@

                        <div class="mb-3">
                            <label class="form-label fw-bold small">İŞLEM AÇIKLAMASI (DEĞİŞTİRİLEMEZ)</label>
                            @* readonly ile personelin açıklamayı manipüle etmesi engellenir *@
                            <textarea asp-for="Description" class="form-control bg-light" rows="2" readonly></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold small">İŞLEM TİPİ</label>
                            @* asp-for ile MovementType özelliğine doğrudan bağlanır *@
                            <select asp-for="MovementType" class="form-select border-2">
                                <option value="Borç">Borç (Servis Ücreti)</option>
                                <option value="Alacak">Alacak (Ödeme)</option>
                            </select>
                            <span class="text-muted small">Not: Servis bedeli açıklamalarında tip sistemce 'Borç' olarak sabitlenir.</span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold small">TUTAR (TL)</label>
                            <input asp-for="Amount" type="number" step="0.01" class="form-control border-2" required />
                        </div>

                        <div class="d-flex gap-2 pt-3">
                            <button type="submit" class="btn btn-primary fw-bold">Değişiklikleri Kaydet</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Vazgeç</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>