@model TeknikServis.Core.Entities.CustomerMovement

@{
    ViewData["Title"] = "Cari Hareket Düzenle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-warning py-3">
                    <h5 class="mb-0 fw-bold text-dark"><i class="fa-solid fa-edit me-2"></i>Cari Hareket Düzenle</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label class="form-label fw-bold small">İŞLEM AÇIKLAMASI</label>
                            <textarea asp-for="Description" id="DescField" class="form-control bg-light border-2" rows="3" readonly></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold small text-danger">İŞLEM TİPİ</label>
                                <select asp-for="MovementType" id="MovementType" class="form-select border-danger border-2">
                                    <option value="Borç">Borç</option>
                                    <option value="Alacak">Alacak</option>
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold small text-primary">ÖDEME ŞEKLİ</label>
                                <select id="PaymentMethodSelect" class="form-select border-primary border-2 shadow-sm">
                                    <option value="">Seçiniz...</option>
                                    <option value="Nakit">Nakit</option>
                                    <option value="Kredi Kartı">Kredi Kartı</option>
                                    <option value="Havale/EFT">Havale/EFT</option>
                                    <option value="Çek/Senet">Çek/Senet</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold small">TUTAR (TL)</label>
                            @* Tutar alanı readonly yapılarak false duruma getirildi *@
                            <input asp-for="Amount" type="number" step="0.01" class="form-control bg-light border-2" readonly />
                        </div>

                        <div class="d-flex gap-2 pt-3">
                            <button type="submit" class="btn btn-primary fw-bold px-4">Kaydet</button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">Vazgeç</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const movementType = document.getElementById("MovementType");
            const paySelect = document.getElementById("PaymentMethodSelect");
            const descField = document.getElementById("DescField");

            // Mevcut açıklamadan ödeme şeklini çek
            const currentDesc = descField.value;
            const options = ["Nakit", "Kredi Kartı", "Havale/EFT", "Çek/Senet"];
            options.forEach(opt => {
                if (currentDesc.includes(opt)) paySelect.value = opt;
            });

            function updateDescription() {
                let text = descField.value;
                let baseInfo = text.split(" No'lu")[0] + " No'lu servis bedeli";

                if (movementType.value === "Borç") {
                    descField.value = baseInfo + " tahakkuku.";
                } else {
                    const method = paySelect.value || "Belirtilmedi";
                    descField.value = baseInfo + ". Tip: " + method;
                }
            }

            movementType.addEventListener("change", updateDescription);
            paySelect.addEventListener("change", updateDescription);
        });
    </script>
}