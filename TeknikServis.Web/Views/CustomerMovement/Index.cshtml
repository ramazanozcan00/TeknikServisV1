@model IEnumerable<TeknikServis.Core.Entities.CustomerMovement>

@{
    ViewData["Title"] = "Cari Hareket Raporu";

    // Müşteriye kesilen servis bedelleri (Müşterinin borcu artar)
    decimal toplamBorc = Model.Where(x => x.MovementType == "Borç").Sum(x => x.Amount);

    // Müşterinin yaptığı ödemeler (Müşterinin borcu azalır)
    // Ödeme yapıldığında MovementType "Alacak" olarak kaydedilmelidir.
    decimal toplamAlacak = Model.Where(x => x.MovementType == "Alacak").Sum(x => x.Amount);

    // Dönem Bakiyesi: Toplam Borç - Toplam Alacak
    // Pozitif çıkarsa: Müşterinin size borcu var.
    // Negatif çıkarsa: Müşteri fazla ödeme yapmış (Müşteri alacaklı).
    decimal genelBakiye = toplamBorc - toplamAlacak;
}

<div class="container-fluid mt-4">
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body bg-light rounded">
            <form method="get" asp-action="Index" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label small fw-bold">Firma / Müşteri</label>
                    <select name="customerId" class="form-select select2">
                        <option value="">Tüm Firmalar</option>
                        @foreach (var cust in ViewBag.Customers)
                        {
                            <option value="@cust.Id" selected="@(ViewBag.SelectedCustomer == cust.Id)">@cust.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label small fw-bold">Ay Seçimi</label>
                    <select name="month" class="form-select">
                        <option value="">Tüm Aylar</option>
                        @{
                            var aylar = new string[] { "Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık" };
                            for (int i = 1; i <= 12; i++)
                            {
                                <option value="@i" selected="@(ViewBag.SelectedMonth == i)">@aylar[i - 1]</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label small fw-bold">Yıl</label>
                    <select name="year" class="form-select">
                        @for (int i = DateTime.Now.Year; i >= 2023; i--)
                        {
                            <option value="@i" selected="@(ViewBag.SelectedYear == i)">@i</option>
                        }
                    </select>
                </div>
                <div class="col-md-3 d-flex gap-2">
                    <button type="submit" class="btn btn-primary w-100 fw-bold">
                        <i class="fa-solid fa-filter me-2"></i>Filtrele
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary w-100 fw-bold">Temizle</a>
                </div>
            </form>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-start border-4 border-danger shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-muted small text-uppercase fw-bold">Toplam Tahakkuk (Borç)</h6>
                    <h3 class="fw-bold text-danger">@toplamBorc.ToString("C2")</h3>
                    <small class="text-muted">Müşterinin toplam servis yükümlülüğü</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-start border-4 border-success shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-muted small text-uppercase fw-bold">Toplam Tahsilat (Alacak)</h6>
                    <h3 class="fw-bold text-success">@toplamAlacak.ToString("C2")</h3>
                    <small class="text-muted">Sisteme girilen toplam ödemeler</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-start border-4 @(genelBakiye > 0 ? "border-primary" : "border-info") shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-muted small text-uppercase fw-bold">Dönem Bakiyesi</h6>
                    <h3 class="fw-bold @(genelBakiye > 0 ? "text-primary" : "text-info")">@genelBakiye.ToString("C2")</h3>
                    <small class="text-muted">
                        @(genelBakiye > 0 ? "Müşteriden Alacaklısınız" : (genelBakiye < 0 ? "Müşteri Alacaklı (Fazla Ödeme)" : "Hesap Kapalı"))
                    </small>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold text-dark"><i class="fa-solid fa-file-invoice-dollar me-2 text-primary"></i>Hareket Detayları</h5>
            <div class="btn-group">
                <button type="button" onclick="window.print()" class="btn btn-outline-secondary btn-sm">
                    <i class="fa-solid fa-print me-1"></i>Yazdır
                </button>

                <a asp-action="ExportToExcel"
                   asp-route-month="@ViewBag.SelectedMonth"
                   asp-route-year="@ViewBag.SelectedYear"
                   asp-route-customerId="@ViewBag.SelectedCustomer"
                   class="btn btn-outline-success btn-sm">
                    <i class="fa-solid fa-file-excel me-1"></i>Excel'e Aktar
                </a>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-muted small text-uppercase">
                        <tr>
                            <th class="ps-3">Tarih</th>
                            <th>Müşteri / Firma</th>
                            <th>Açıklama</th>
                            <th>İşlem Tipi</th>
                            <th class="text-end">Tutar</th>
                            <th class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-3 small text-muted">@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    <div class="fw-bold text-dark">@item.Customer?.FirstName @item.Customer?.LastName</div>
                                    <div class="small text-muted">@(item.Customer?.CompanyName ?? "Bireysel Müşteri")</div>
                                </td>
                                <td>
                                    @item.Description
                                    @if (item.ServiceTicketId.HasValue)
                                    {
                                        <a href="/ServiceTicket/Details/@item.ServiceTicketId" class="badge bg-light text-primary border text-decoration-none ms-1">
                                            <i class="fa-solid fa-magnifying-glass me-1"></i>Fişi Gör
                                        </a>
                                    }
                                </td>
                                <td>
                                    @if (item.MovementType == "Borç")
                                    {
                                        <span class="badge bg-danger-subtle text-danger px-3 py-2 rounded-pill">
                                            <i class="fa-solid fa-arrow-up me-1"></i>Borç
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success-subtle text-success px-3 py-2 rounded-pill">
                                            <i class="fa-solid fa-arrow-down me-1"></i>Ödeme Yapıldı
                                        </span>
                                    }
                                </td>
                                <td class="text-end fw-bold @(item.MovementType == "Borç" ? "text-danger" : "text-success")">
                                    @(item.MovementType == "Borç" ? "" : "+") @item.Amount.ToString("C2")
                                </td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                            <i class="fa-solid fa-edit"></i> Düzenle
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">Seçilen kriterlere uygun hareket bulunamadı.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>