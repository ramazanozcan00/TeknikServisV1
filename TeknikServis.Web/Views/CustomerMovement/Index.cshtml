@model IEnumerable<TeknikServis.Core.Entities.CustomerMovement>

@{
    ViewData["Title"] = "Cari Hareket Raporu";
    // Toplam bakiye hesabı
    decimal toplamBorc = Model.Where(x => x.MovementType == "Borç").Sum(x => x.Amount);
    decimal toplamAlacak = Model.Where(x => x.MovementType == "Alacak").Sum(x => x.Amount);
    decimal genelBakiye = toplamBorc - toplamAlacak;
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-start border-4 border-danger shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted small text-uppercase fw-bold">Toplam Borç (Servisler)</h6>
                    <h3 class="fw-bold text-danger">@toplamBorc.ToString("C2")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-start border-4 border-success shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted small text-uppercase fw-bold">Toplam Alacak (Ödemeler)</h6>
                    <h3 class="fw-bold text-success">@toplamAlacak.ToString("C2")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-start border-4 border-primary shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted small text-uppercase fw-bold">Genel Bakiye</h6>
                    <h3 class="fw-bold text-primary">@genelBakiye.ToString("C2")</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold text-dark"><i class="fa-solid fa-file-invoice-dollar me-2 text-primary"></i>Cari Hareketler</h5>
            <div class="btn-group">
                <button class="btn btn-outline-secondary btn-sm"><i class="fa-solid fa-print me-1"></i>Yazdır</button>
                <button class="btn btn-outline-success btn-sm"><i class="fa-solid fa-file-excel me-1"></i>Excel</button>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-muted small text-uppercase">
                        <tr>
                            <th class="ps-3">Tarih</th>
                            <th>Müşteri / Firma</th>
                            <th>Açıklama</th>
                            <th>İşlem Tipi</th>
                            <th class="text-end pe-3">Tutar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-3 small text-muted">@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    <div class="fw-bold text-dark">@item.Customer?.FirstName @item.Customer?.LastName</div>
                                    <div class="small text-muted">@(item.Customer?.CompanyName ?? "Bireysel Müşteri")</div>
                                </td>
                                <td>
                                    @item.Description
                                    @if (item.ServiceTicketId.HasValue)
                                    {
                                        <a href="/ServiceTicket/Details/@item.ServiceTicketId" class="badge bg-light text-primary border text-decoration-none ms-1">
                                            <i class="fa-solid fa-magnifying-glass me-1"></i>Fişi Gör
                                        </a>
                                    }
                                </td>
                                <td>
                                    @if (item.MovementType == "Borç")
                                    {
                                        <span class="badge bg-danger-subtle text-danger px-3 py-2 rounded-pill">
                                            <i class="fa-solid fa-arrow-up me-1"></i>Borç
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success-subtle text-success px-3 py-2 rounded-pill">
                                            <i class="fa-solid fa-arrow-down me-1"></i>Alacak
                                        </span>
                                    }
                                </td>
                                <td class="text-end pe-3 fw-bold @(item.MovementType == "Borç" ? "text-danger" : "text-success")">
                                    @(item.MovementType == "Borç" ? "-" : "+") @item.Amount.ToString("C2")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>