@model IEnumerable<TeknikServis.Core.Entities.SparePart>

@{
    ViewData["Title"] = "Yedek Parça Stok";

    // HATA ÇÖZÜMÜ: (int?) cast işlemi eklenerek null kontrolü sağlandı
    int currentPage = (int?)ViewBag.CurrentPage ?? 1;
    int totalPages = (int?)ViewBag.TotalPages ?? 1;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3><i class="fa-solid fa-boxes-stacked me-2"></i>Yedek Parça & Stok</h3>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa-solid fa-plus me-1"></i>Yeni Parça Ekle
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Durum</th>
                        <th>Ürün İsmi</th>
                        <th>Stok Kodu</th>
                        <th>Satış Fiyatı</th>
                        <th>Miktar</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        // Kritik Stok Kontrolü (2 ve altı)
                        bool isCritical = item.Quantity <= 2;
                        string rowClass = isCritical ? "table-danger" : "";

                        <tr class="@rowClass">
                            <td class="ps-4">
                                @if (isCritical)
                                {
                                    <span class="badge bg-danger text-white shadow-sm">
                                        <i class="fa-solid fa-triangle-exclamation me-1"></i>KRİTİK
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-success text-white shadow-sm">
                                        <i class="fa-solid fa-check me-1"></i>STOKTA
                                    </span>
                                }
                            </td>
                            <td class="fw-bold text-dark">@item.ProductName</td>
                            <td>
                                <span class="badge bg-light text-dark border font-monospace">
                                    @(string.IsNullOrEmpty(item.StockCode) ? "-" : item.StockCode)
                                </span>
                            </td>
                            <td>@item.SalesPrice.ToString("C2")</td>
                            <td>
                                <strong class="fs-5">@item.Quantity.ToString("0.##")</strong>
                                <span class="text-muted small">@item.UnitType</span>
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <a asp-action="Movements" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white" title="Geçmiş Hareketler">
                                        <i class="fa-solid fa-clock-rotate-left"></i>
                                    </a>

                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-dark" title="Düzenle">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="fa-solid fa-box-open fs-1 mb-3 opacity-25"></i>
                                <p>Henüz kayıtlı yedek parça bulunmuyor.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (totalPages > 1)
    {
        <div class="card-footer bg-white py-3 border-top">
            <nav aria-label="Sayfalama">
                <ul class="pagination justify-content-center mb-0 shadow-sm">

                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link border-0" asp-action="Index" asp-route-page="@(currentPage - 1)">
                            <i class="fa-solid fa-chevron-left small"></i> Önceki
                        </a>
                    </li>

                    @for (int i = 1; i <= totalPages; i++)
                    {
                        if (i == 1 || i == totalPages || (i >= currentPage - 2 && i <= currentPage + 2))
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link border-0 @(i == currentPage ? "fw-bold" : "")" asp-action="Index" asp-route-page="@i">@i</a>
                            </li>
                        }
                        else if (i == currentPage - 3 || i == currentPage + 3)
                        {
                            <li class="page-item disabled"><span class="page-link border-0">...</span></li>
                        }
                    }

                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link border-0" asp-action="Index" asp-route-page="@(currentPage + 1)">
                            Sonraki <i class="fa-solid fa-chevron-right small"></i>
                        </a>
                    </li>

                </ul>
            </nav>
        </div>
    }
</div>