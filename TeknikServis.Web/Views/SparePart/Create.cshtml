@model TeknikServis.Core.Entities.SparePart
@{
    ViewData["Title"] = "Parça Ekle";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">Yeni Yedek Parça</div>
            <div class="card-body">
                <form asp-action="Create" method="post">

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Ürün İsmi</label>
                            <input asp-for="ProductName" class="form-control" required />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Stok Kodu</label>
                            <input asp-for="StockCode" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Barkod</label>
                            <input asp-for="Barcode" class="form-control" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Alış Fiyatı</label>
                            <div class="input-group">
                                <span class="input-group-text">₺</span>
                                <input asp-for="PurchasePrice" class="form-control" type="number" step="0.01" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Satış Fiyatı</label>
                            <div class="input-group">
                                <span class="input-group-text">₺</span>
                                <input asp-for="SalesPrice" class="form-control" type="number" step="0.01" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">KDV</label>
                            <div class="input-group">
                                <input asp-for="VatRate" class="form-control" type="number" value="20" />
                                <span class="input-group-text">%</span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4 bg-light p-3 rounded border">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Miktar</label>
                            <input asp-for="Quantity" class="form-control" type="number" step="0.01" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Birim</label>
                            <select asp-for="UnitType" class="form-select">
                                <option value="Adet">Adet</option>
                                <option value="Kg">Kg</option>
                                <option value="Litre">Litre</option>
                                <option value="Metre">Metre</option>
                                <option value="Kutu">Kutu</option>
                                <option value="Set">Set</option>
                            </select>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">İptal</a>
                        <button type="submit" class="btn btn-success px-5">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>