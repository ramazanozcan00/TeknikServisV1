@model TeknikServis.Core.Entities.SparePart

@{
    ViewData["Title"] = "Parça Düzenle";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow border-0">
            <div class="card-header bg-warning text-dark py-3">
                <h5 class="mb-0 fw-bold">
                    <i class="fa-solid fa-pen-to-square me-2"></i>Yedek Parça Düzenle
                </h5>
            </div>
            <div class="card-body p-4">

                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Ürün İsmi <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-box-open"></i></span>
                                <input asp-for="ProductName" class="form-control" required />
                            </div>
                            <span asp-validation-for="ProductName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-bold">Stok Kodu</label>
                            <input asp-for="StockCode" class="form-control" placeholder="Örn: YP-001" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-bold">Barkod</label>
                            <input asp-for="Barcode" class="form-control" placeholder="869..." />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Alış Fiyatı</label>
                            <div class="input-group">
                                <span class="input-group-text">₺</span>
                                <input asp-for="PurchasePrice" class="form-control" type="number" step="0.01" min="0" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Satış Fiyatı</label>
                            <div class="input-group">
                                <span class="input-group-text">₺</span>
                                <input asp-for="SalesPrice" class="form-control" type="number" step="0.01" min="0" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold">KDV (%)</label>
                            <div class="input-group">
                                <input asp-for="VatRate" class="form-control" type="number" min="0" max="100" />
                                <span class="input-group-text">%</span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4 bg-light p-3 rounded border mx-0">
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-primary">Mevcut Miktar</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="fa-solid fa-layer-group text-primary"></i></span>
                                <input asp-for="Quantity" class="form-control fw-bold text-primary" type="number" step="0.01" required />
                            </div>
                            <div class="form-text text-muted small">Stok miktarını buradan manuel düzeltebilirsiniz.</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Birim</label>
                            <select asp-for="UnitType" class="form-select">
                                <option value="Adet">Adet</option>
                                <option value="Kg">Kg</option>
                                <option value="Litre">Litre</option>
                                <option value="Metre">Metre</option>
                                <option value="Kutu">Kutu</option>
                                <option value="Set">Set</option>
                            </select>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a asp-action="Index" class="btn btn-secondary px-4">
                            <i class="fa-solid fa-arrow-left me-2"></i>Listeye Dön
                        </a>
                        <button type="submit" class="btn btn-warning px-5 fw-bold shadow-sm">
                            <i class="fa-solid fa-floppy-disk me-2"></i>Güncelle
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>