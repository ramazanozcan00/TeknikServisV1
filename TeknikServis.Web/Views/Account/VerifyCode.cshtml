@model TeknikServis.Web.Models.VerifyCodeViewModel
@{
    Layout = null;
    ViewData["Title"] = "Güvenlik Kodu";

    // Mesaj ve İkon Ayarlama
    string sentMessage = $"<strong>{Model.Email}</strong> e-posta adresine";
    string iconClass = "fa-envelope";

    if (Model.Provider == "Phone")
    {
        // Controller'dan gelen maskelenmiş numarayı al
        string maskedPhone = ViewBag.MaskedInfo != null ? ViewBag.MaskedInfo.ToString() : "telefon numaranıza";
        sentMessage = $"<strong>{maskedPhone}</strong> nolu telefona";
        iconClass = "fa-comment-sms";
    }
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Güvenlik Doğrulaması</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f4f6f9;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
        }

        .verify-card {
            width: 100%;
            max-width: 450px;
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            background-color: #fff;
            overflow: hidden;
        }

        .card-header-custom {
            background-color: #ffc107;
            color: #333;
            padding: 20px;
            text-align: center;
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }

        .letter-spacing-2 {
            letter-spacing: 8px;
            font-weight: bold;
            font-size: 1.5rem;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 d-flex justify-content-center">

                <div class="card verify-card">
                    <div class="card-header-custom">
                        <h4 class="fw-bold mb-0"><i class="fa-solid fa-shield-halved me-2"></i>Güvenlik Kontrolü</h4>
                    </div>

                    <div class="card-body p-4">

                        <div class="text-center mb-4">
                            <div class="mb-3">
                                <i class="fa-solid @iconClass fa-3x text-warning"></i>
                            </div>
                            <p class="text-muted small mb-1">Lütfen kayıtlı @Html.Raw(sentMessage) gönderilen</p>
                            <p class="text-muted small fw-bold">6 haneli doğrulama kodunu giriniz.</p>
                        </div>

                        <form asp-action="VerifyCode" method="post">
                            <input type="hidden" asp-for="Email" />
                            <input type="hidden" asp-for="RememberMe" />
                            <input type="hidden" asp-for="Provider" />

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small text-center"></div>

                            <div class="form-floating mb-4">
                                <input asp-for="Code" class="form-control text-center letter-spacing-2" placeholder="Kod" maxlength="6" autocomplete="off" required autofocus />
                                <label asp-for="Code" class="text-center w-100">Doğrulama Kodu</label>
                                <span asp-validation-for="Code" class="text-danger small d-block text-center mt-1"></span>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-warning btn-lg fw-bold shadow-sm">
                                    Doğrula ve Gir <i class="fa-solid fa-arrow-right ms-2"></i>
                                </button>

                                <a asp-action="Login" class="btn btn-light btn-sm text-muted mt-2">
                                    <i class="fa-solid fa-arrow-left me-1"></i> Giriş ekranına dön
                                </a>
                            </div>
                        </form>

                    </div>

                    <div class="card-footer bg-light text-center py-3 border-0">
                        <small class="text-muted" style="font-size: 11px;">
                            &copy; @DateTime.Now.Year - Teknik Servis Pro Güvenlik Sistemi
                        </small>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>