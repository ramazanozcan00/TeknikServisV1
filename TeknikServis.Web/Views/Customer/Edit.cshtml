                                <label class="form-label fw-bold small text-secondary">Vergi Dairesi</label>
                                <div class="d-flex align-items-center gap-3 input-wrapper">
                                    <div class="icon-box shadow-sm">
                                        <i class="fa-solid fa-building-columns"></i>
                                    </div>
                                    <input asp-for="TaxOffice" class="form-control border shadow-sm py-2" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-secondary">Vergi No</label>
                                <div class="d-flex align-items-center gap-3 input-wrapper">
                                    <div class="icon-box shadow-sm">
                                        <i class="fa-solid fa-receipt"></i>
                                    </div>
                                    <input asp-for="TaxNumber" class="form-control border shadow-sm py-2" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-3 mt-4 mb-5">
                    <a asp-action="Index" class="btn btn-light border px-4 py-2 rounded-3 fw-bold hover-scale shadow-sm">
                        <i class="fa-solid fa-xmark me-2"></i>Vazgeç
                    </a>
