<div class="container-fluid px-4 py-4 soft-bg">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="BranchId" />
                <input type="hidden" asp-for="CreatedDate" />

                <div class="form-header shadow-sm rounded-4 p-4 mb-4 bg-white d-flex justify-content-between align-items-center position-relative overflow-hidden">
