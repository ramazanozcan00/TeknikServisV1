                    <div>
                        <h2 class="fw-bold text-dark mb-1 d-flex align-items-center">
                            <span class="header-icon-box bg-warning bg-opacity-10 text-warning me-3">
                                <i class="fa-solid fa-user-pen"></i>
                            </span>
                            Müşteri Düzenle
                        </h2>
                        <p class="text-muted ms-5 ps-2 mb-0 small">Müşteri kartını güncelleme ekranı</p>
                    </div>
                    <div class="d-none d-md-block">
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 hover-shadow">
                            <i class="fa-solid fa-arrow-left me-2"></i>Listeye Dön
                        </a>
                    </div>
                </div>

                <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                    <div class="card-header bg-white border-bottom py-3">
                        <h6 class="text-primary fw-bold text-uppercase mb-0 small ls-1">
                            <i class="fa-solid fa-id-card me-2"></i>Genel Bilgiler
                        </h6>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-secondary">Müşteri Tipi</label>
                                <div class="d-flex align-items-center gap-3 input-wrapper">
                                    <div class="icon-box shadow-sm">
                                        <i class="fa-solid fa-users-gear"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <select asp-for="CustomerType" class="form-select border shadow-sm h-100">
                                            <option value="Normal">Normal Müşteri</option>
                                            <option value="Esnaf">Esnaf</option>
                                            <option value="Bayi">Bayi</option>
                                            <option value="Problemli" class="text-danger fw-bold">!!! Problemli Müşteri !!!</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-secondary">Firma İsmi</label>
                                <div class="d-flex align-items-center gap-3 input-wrapper">
                                    <div class="icon-box shadow-sm">
                                        <i class="fa-solid fa-building"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <select asp-for="CompanyName" class="form-select border shadow-sm" id="companySelect" asp-items="ViewBag.CompanyList">
                                            <option value="">Seçiniz veya Yazınız...</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-secondary">Ad <span class="text-danger">*</span></label>
                                <div class="d-flex align-items-center gap-3 input-wrapper">
                                    <div class="icon-box shadow-sm">
                                        <i class="fa-solid fa-user"></i>
                                    </div>
                                    <input asp-for="FirstName" class="form-control border shadow-sm py-2" required />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-secondary">Soyad <span class="text-danger">*</span></label>
                                <div class="d-flex align-items-center gap-3 input-wrapper">
                                    <div class="icon-box shadow-sm">
                                        <i class="fa-solid fa-user"></i>
                                    </div>
                                    <input asp-for="LastName" class="form-control border shadow-sm py-2" required />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-secondary">TC Kimlik No</label>
                                <div class="d-flex align-items-center gap-3 input-wrapper">
                                    <div class="icon-box shadow-sm">
                                        <i class="fa-solid fa-address-card"></i>
                                    </div>
                                    <input asp-for="TCNo" class="form-control border shadow-sm py-2" maxlength="11" placeholder="11 haneli..." />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-secondary">E-Posta</label>
                                <div class="d-flex align-items-center gap-3 input-wrapper">
                                    <div class="icon-box shadow-sm">
                                        <i class="fa-solid fa-envelope"></i>
                                    </div>
                                    <input asp-for="Email" type="email" class="form-control border shadow-sm py-2" placeholder="ornek@email.com" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

