                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-secondary">Telefon 1 <span class="text-danger">*</span></label>
                                <div class="d-flex align-items-center gap-3 input-wrapper">
                                    <div class="icon-box shadow-sm text-success-emphasis bg-success-subtle border-success-subtle">
                                        <i class="fa-solid fa-mobile-screen"></i>
                                    </div>
                                    <input asp-for="Phone" class="form-control border shadow-sm py-2" placeholder="0555..." required />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-secondary">Telefon 2 (Yedek)</label>
                                <div class="d-flex align-items-center gap-3 input-wrapper">
                                    <div class="icon-box shadow-sm">
                                        <i class="fa-solid fa-phone"></i>
                                    </div>
                                    <input asp-for="Phone2" class="form-control border shadow-sm py-2" placeholder="Sabit hat..." />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-secondary">İl</label>
                                <div class="d-flex align-items-center gap-3 input-wrapper">
                                    <div class="icon-box shadow-sm">
                                        <i class="fa-solid fa-map"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <select asp-for="City" class="form-select border shadow-sm" id="citySelect">
