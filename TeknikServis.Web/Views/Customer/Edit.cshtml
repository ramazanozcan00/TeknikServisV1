                                <label class="form-label fw-bold small text-secondary">İlçe</label>
                                <div class="d-flex align-items-center gap-3 input-wrapper">
                                    <div class="icon-box shadow-sm">
                                        <i class="fa-solid fa-map-pin"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <select asp-for="District" class="form-select border shadow-sm" id="districtSelect" disabled>
