@{
    ViewData["Title"] = "Yeni Müşteri Oluştur";
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />

<style>
    /* --- SELECT2 DÜZELTMESİ --- */
    /* Input Group içindeki Select2'nin ikonun altına düşmesini engeller ve yan yana zorlar */
    .input-group .select2-container--bootstrap-5 {
        flex: 1 1 auto !important;
        width: auto !important;
    }

        /* Select2 kutusunun yüksekliğini ve kenarlıklarını Bootstrap input'a benzetir */
        .input-group .select2-container--bootstrap-5 .select2-selection {
            border-top-left-radius: 0 !important;
            border-bottom-left-radius: 0 !important;
        }
</style>

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-11 col-xl-10">

            <div class="card border-0 shadow-sm rounded-3">

                <div class="card-header bg-white border-bottom py-3">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 text-primary rounded p-3 me-3">
                            <i class="fa-solid fa-user-plus fa-xl"></i>
                        </div>
                        <div>
                            <h5 class="mb-1 fw-bold text-dark">Yeni Müşteri Kaydı</h5>
                            <p class="mb-0 text-muted small">Lütfen müşteri bilgilerini eksiksiz doldurunuz.</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" method="post">

                        <h6 class="text-primary fw-bold mb-3 text-uppercase small ls-1"><i class="fa-solid fa-circle-info me-2"></i>Genel Bilgiler</h6>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="CustomerType" class="form-label fw-bold small text-secondary">Müşteri Tipi</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-users text-muted"></i></span>
                                    <select asp-for="CustomerType" class="form-select border-start-0 ps-0 bg-light">
                                        <option value="Normal">Normal Müşteri</option>
                                        <option value="Esnaf">Esnaf</option>
                                        <option value="Bayi">Bayi</option>
                                        <option value="Problemli" class="text-danger fw-bold">!!! Problemli Müşteri !!!</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="CompanyName" class="form-label fw-bold small text-secondary">Firma İsmi</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white text-muted"><i class="fa-solid fa-building"></i></span>
                                    <select asp-for="CompanyName" class="form-select" id="companySelect" asp-items="ViewBag.CompanyList">
                                        <option value="">Seçiniz veya Yazınız...</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label fw-bold small text-secondary">Ad <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white text-muted"><i class="fa-regular fa-user"></i></span>
                                    <input asp-for="FirstName" class="form-control" placeholder="Müşteri adı" required />
                                </div>
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label fw-bold small text-secondary">Soyad <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white text-muted"><i class="fa-regular fa-user"></i></span>
                                    <input asp-for="LastName" class="form-control" placeholder="Müşteri soyadı" required />
                                </div>
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="TCNo" class="form-label fw-bold small text-secondary">TC Kimlik No</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white text-muted"><i class="fa-solid fa-id-card"></i></span>
                                    <input asp-for="TCNo" class="form-control" maxlength="11" placeholder="11 haneli kimlik no" />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-bold small text-secondary">E-Posta</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white text-muted"><i class="fa-regular fa-envelope"></i></span>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="ornek@mail.com" />
                                </div>
                            </div>
                        </div>

                        <hr class="my-4 text-muted opacity-25" />

                        <h6 class="text-success fw-bold mb-3 text-uppercase small ls-1"><i class="fa-solid fa-address-book me-2"></i>İletişim Bilgileri</h6>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label fw-bold small text-secondary">Telefon (GSM) <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-success bg-opacity-10 text-success border-success border-opacity-25"><i class="fa-solid fa-mobile-screen"></i></span>
                                    <input asp-for="Phone" class="form-control border-success border-opacity-25" placeholder="(5XX) XXX XX XX" required />
                                </div>
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Phone2" class="form-label fw-bold small text-secondary">Yedek Telefon / Sabit</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white text-muted"><i class="fa-solid fa-phone"></i></span>
                                    <input asp-for="Phone2" class="form-control" placeholder="Diğer numara" />
                                </div>
                            </div>

                            <div class="col-12">
                                <label asp-for="Address" class="form-label fw-bold small text-secondary">Açık Adres</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white text-muted"><i class="fa-solid fa-map-location-dot"></i></span>
                                    <textarea asp-for="Address" class="form-control" rows="2" placeholder="Mahalle, Cadde, Sokak, No..."></textarea>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="City" class="form-label fw-bold small text-secondary">İl</label>
                                <select asp-for="City" class="form-select" id="citySelect">
                                    <option value="">Seçiniz...</option>
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="District" class="form-label fw-bold small text-secondary">İlçe</label>
                                <select asp-for="District" class="form-select" id="districtSelect" disabled>
                                    <option value="">Önce İl Seçiniz</option>
                                </select>
                            </div>
                        </div>

                        <hr class="my-4 text-muted opacity-25" />

                        <h6 class="text-warning fw-bold mb-3 text-uppercase small ls-1"><i class="fa-solid fa-file-invoice me-2"></i>Fatura Bilgileri</h6>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="TaxOffice" class="form-label fw-bold small text-secondary">Vergi Dairesi</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white text-muted"><i class="fa-solid fa-building-columns"></i></span>
                                    <input asp-for="TaxOffice" class="form-control" placeholder="Vergi dairesi adı" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TaxNumber" class="form-label fw-bold small text-secondary">Vergi No</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white text-muted"><i class="fa-solid fa-hashtag"></i></span>
                                    <input asp-for="TaxNumber" class="form-control" placeholder="Vergi numarası" />
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-light border text-muted">
                                <i class="fa-solid fa-xmark me-2"></i>Vazgeç
                            </a>
                            <button type="submit" class="btn btn-primary px-4 fw-bold">
                                <i class="fa-solid fa-save me-2"></i>Müşteriyi Kaydet
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

