@model TeknikServis.Core.Entities.CompanySetting

@{
    ViewData["Title"] = "Yeni Firma Ekle";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8 col-xl-7">

            <div class="card border-0 shadow-sm rounded-3">

                <div class="card-header bg-white border-bottom py-3">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 text-primary rounded p-3 me-3">
                            <i class="fa-solid fa-building fa-xl"></i>
                        </div>
                        <div>
                            <h5 class="mb-1 fw-bold text-dark">Yeni Firma Ekle</h5>
                            <p class="mb-0 text-muted small">Sisteme yeni bir firma veya tedarikçi tanımlayın.</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" method="post">

                        <h6 class="text-primary fw-bold mb-3 text-uppercase small ls-1">
                            <i class="fa-solid fa-circle-info me-2"></i>Firma Bilgileri
                        </h6>

                        <div class="row g-3 mb-4">
                            <div class="col-md-7">
                                <label asp-for="CompanyName" class="form-label fw-bold small text-secondary">Firma Adı <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white text-muted"><i class="fa-regular fa-building"></i></span>
                                    <input asp-for="CompanyName" class="form-control" placeholder="Örn: Trendyol, Hepsiburada..." required />
                                </div>
                            </div>

                            <div class="col-md-5">
                                <label asp-for="Phone" class="form-label fw-bold small text-secondary">Telefon</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white text-muted"><i class="fa-solid fa-phone"></i></span>
                                    <input asp-for="Phone" class="form-control" placeholder="(0XXX) XXX XX XX" />
                                </div>
                            </div>
                        </div>

                        <div class="p-3 bg-light bg-opacity-50 rounded-3 mb-4 border border-light dashed-border">
                            <h6 class="text-warning fw-bold mb-3 text-uppercase small ls-1">
                                <i class="fa-solid fa-file-invoice-dollar me-2"></i>Fatura Bilgileri
                            </h6>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="TaxOffice" class="form-label fw-bold small text-secondary">Vergi Dairesi</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-white text-muted border-end-0"><i class="fa-solid fa-building-columns"></i></span>
                                        <input asp-for="TaxOffice" class="form-control border-start-0 ps-0" placeholder="Vergi dairesi adı" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="TaxNumber" class="form-label fw-bold small text-secondary">Vergi Numarası</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-white text-muted border-end-0"><i class="fa-solid fa-hashtag"></i></span>
                                        <input asp-for="TaxNumber" class="form-control border-start-0 ps-0" placeholder="Vergi numarası" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Address" class="form-label fw-bold small text-secondary">Açık Adres</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white text-muted"><i class="fa-solid fa-map-location-dot"></i></span>
                                <textarea asp-for="Address" class="form-control" rows="2" placeholder="Mahalle, Cadde, Sokak, Kapı No..."></textarea>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-light border text-muted">
                                <i class="fa-solid fa-xmark me-2"></i>Vazgeç
                            </a>
                            <button type="submit" class="btn btn-primary px-4 fw-bold">
                                <i class="fa-solid fa-save me-2"></i>Kaydet
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>