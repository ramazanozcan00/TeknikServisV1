@{
    Layout = null; // Menüleri göstermemek için Layout kullanmıyoruz
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lisans Süresi Doldu</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body class="bg-light d-flex align-items-center justify-content-center" style="height: 100vh;">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card border-0 shadow-lg rounded-4">
                    <div class="card-header bg-danger text-white text-center py-4 rounded-top-4">
                        <i class="fa-solid fa-lock fa-3x mb-2"></i>
                        <h4 class="fw-bold m-0">Erişim Kısıtlandı</h4>
                    </div>
                    <div class="card-body p-5 text-center">

                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-warning">@TempData["Error"]</div>
                        }

                        <h5 class="text-danger fw-bold mb-3">Lisans Süreniz Sona Erdi!</h5>
                        <p class="text-muted mb-4">
                            Sistemi kullanmaya devam etmek için lütfen yöneticinizden temin ettiğiniz
                            <strong>Yeni Lisans Anahtarını</strong> aşağıya giriniz.
                        </p>

                        <form asp-action="UpdateLicense" asp-controller="License" method="post">
                            <div class="form-floating mb-4">
                                <input type="text" name="key" class="form-control text-center fw-bold font-monospace" id="licenseKeyInput" placeholder="Anahtar" required autocomplete="off">
                                <label for="licenseKeyInput">Lisans Anahtarı</label>
                            </div>

                            <button type="submit" class="btn btn-danger w-100 py-3 fw-bold rounded-pill shadow-sm">
                                <i class="fa-solid fa-key me-2"></i>Lisansı Doğrula ve Devam Et
                            </button>
                        </form>

                        <div class="mt-4 pt-3 border-top">
                            <small class="text-muted">Teknik Destek: rmzczcan@gmail.com</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>