@model TeknikServis.Core.Entities.SupportRequest
@{
    ViewData["Title"] = "Talep Detayı";
}

<div class="container mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary mb-3"><i class="fa-solid fa-arrow-left"></i> Geri Dön</a>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0">@Model.Subject</h5>
            <span class="badge @(Model.IsReplied ? "bg-success" : "bg-warning text-dark")">
                @(Model.IsReplied ? "Yanıtlandı" : "Cevap Bekliyor")
            </span>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <small class="text-muted">Oluşturan:</small>
                    <div><strong>@Model.User?.FullName</strong> <span class="text-muted small">(@Model.CreatedDate)</span></div>
                </div>
                <div class="col-md-6 text-end">
                    <small class="text-muted">Öncelik:</small>
                    <div class="fw-bold">@Model.Priority</div>
                </div>
            </div>
            <hr />
            <p class="lead fs-6">@Model.Description</p>

            @if (!string.IsNullOrEmpty(Model.FilePath))
            {
                <div class="mt-3">
                    <a href="@Model.FilePath" target="_blank" class="btn btn-sm btn-outline-primary">
                        <i class="fa-solid fa-paperclip me-1"></i>Eki Görüntüle / İndir
                    </a>
                </div>
            }
        </div>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="card border-primary shadow mb-4">
            <div class="card-header bg-primary text-white">
                <h6 class="mb-0"><i class="fa-solid fa-user-shield me-2"></i>Yönetici Yanıtı</h6>
            </div>
            <div class="card-body">
                <form asp-action="Reply" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <textarea name="replyMessage" class="form-control mb-3" rows="4" placeholder="Cevabınızı buraya yazın...">@Model.AdminReply</textarea>
                    <button type="submit" class="btn btn-primary w-100">Yanıtı Gönder / Güncelle</button>
                </form>
            </div>
        </div>
    }
    else if (Model.IsReplied)
    {
        <div class="card border-success shadow mb-4">
            <div class="card-header bg-success text-white">
                <h6 class="mb-0"><i class="fa-solid fa-check-circle me-2"></i>Yetkili Cevabı</h6>
            </div>
            <div class="card-body bg-light">
                <p class="mb-0">@Model.AdminReply</p>
                <div class="text-end mt-2">
                    <small class="text-muted">Yanıt Tarihi: @Model.UpdatedDate</small>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info"><i class="fa-solid fa-info-circle me-2"></i>Talebiniz yetkililer tarafından incelenmektedir. En kısa sürede yanıt verilecektir.</div>
    }
</div>