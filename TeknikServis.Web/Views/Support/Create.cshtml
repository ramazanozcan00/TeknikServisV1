@model TeknikServis.Core.Entities.SupportRequest
@{
    ViewData["Title"] = "Yeni Destek Talebi";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fa-solid fa-pen-to-square me-2"></i>Yeni Destek Talebi</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create" method="post" enctype="multipart/form-data">

                    <div class="mb-3">
                        <label class="form-label fw-bold">Konu</label>
                        <input asp-for="Subject" class="form-control" placeholder="Sorununuz nedir?" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Öncelik Durumu</label>
                        <select asp-for="Priority" class="form-select">
                            <option value="Düşük">Düşük</option>
                            <option value="Orta" selected>Orta</option>
                            <option value="Yüksek">Yüksek (Acil)</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Detaylı Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="5" required></textarea>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Dosya / Ekran Görüntüsü (Opsiyonel)</label>
                        <input type="file" name="attachment" class="form-control" />
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">İptal</a>
                        <button type="submit" class="btn btn-primary px-4"><i class="fa-solid fa-paper-plane me-2"></i>Gönder</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>