@model TeknikServis.Web.Models.DashboardViewModel
@{
    ViewData["Title"] = "Genel Bakış";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 fw-bold text-dark mb-1">Genel Bakış</h1>
        <p class="text-muted small mb-0">Teknik servis operasyonlarınızın anlık özeti.</p>
    </div>
    <div class="d-flex gap-2">
        <a href="/ServiceTicket/Create" class="btn btn-primary shadow-sm">
            <i class="fa-solid fa-plus me-2"></i>Yeni Kayıt Aç
        </a>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100 overflow-hidden">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <span class="text-uppercase text-muted small fw-bold">Aktif Servisler</span>
                        <h2 class="mt-2 mb-0 fw-bold text-primary">@Model.ActiveTickets</h2>
                    </div>
                    <div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary">
                        <i class="fa-solid fa-screwdriver-wrench fa-xl"></i>
                    </div>
                </div>
                <div class="mt-3 small">
                    <span class="text-danger fw-bold"><i class="fa-solid fa-clock me-1"></i>@Model.PendingRepairs</span>
                    <span class="text-muted">acil işlem bekliyor</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <span class="text-uppercase text-muted small fw-bold">Kayıtlı Müşteri</span>
                        <h2 class="mt-2 mb-0 fw-bold text-dark">@Model.TotalCustomers</h2>
                    </div>
                    <div class="bg-success bg-opacity-10 p-3 rounded-circle text-success">
                        <i class="fa-solid fa-users fa-xl"></i>
                    </div>
                </div>
                <div class="mt-3 small">
                    <span class="text-success fw-bold"><i class="fa-solid fa-arrow-trend-up me-1"></i>%12</span>
                    <span class="text-muted">geçen aya göre artış</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <span class="text-uppercase text-muted small fw-bold">Bu Ay Ciro</span>
                        <h2 class="mt-2 mb-0 fw-bold text-dark">₺@Model.MonthlyRevenue.ToString("N0")</h2>
                    </div>
                    <div class="bg-info bg-opacity-10 p-3 rounded-circle text-info">
                        <i class="fa-solid fa-wallet fa-xl"></i>
                    </div>
                </div>
                <div class="mt-3 small">
                    <span class="text-muted">Toplam Ciro: </span>
                    <span class="fw-bold text-dark">₺@Model.TotalRevenue.ToString("N0")</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <span class="text-uppercase text-muted small fw-bold">Kritik Stok</span>
                        <h2 class="mt-2 mb-0 fw-bold text-danger">@Model.LowStockCount</h2>
                    </div>
                    <div class="bg-danger bg-opacity-10 p-3 rounded-circle text-danger">
                        <i class="fa-solid fa-boxes-stacked fa-xl"></i>
                    </div>
                </div>
                <div class="mt-3 small">
                    <a href="/SparePart/Index" class="text-decoration-none small text-danger fw-semibold">
                        Stokları İncele <i class="fa-solid fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mb-4">

    <div class="col-lg-8">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-bottom py-3 d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title fw-bold mb-0 text-danger">
                        <i class="fa-solid fa-stopwatch me-2"></i>Acil / Bekleyen İşler
                    </h5>
                    <small class="text-muted">En uzun süredir işlem bekleyen kayıtlar</small>
                </div>
                <a href="/ServiceTicket/Index?status=Bekliyor" class="btn btn-sm btn-outline-danger">Hepsini Gör</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-muted small text-uppercase">
                            <tr>
                                <th class="ps-4">Fiş No</th>
                                <th>Cihaz</th>
                                <th>Durum</th>
                                <th>Bekleme Süresi</th>
                                <th class="text-end pe-4">İşlem</th>
                            </tr>
                        </thead>
                        <tbody class="border-top-0">
                            @if (Model.UrgentTickets != null && Model.UrgentTickets.Any())
                            {
                                @foreach (var item in Model.UrgentTickets)
                                {
                                    // Gün farkını hesapla
                                    var daysPending = (DateTime.Now - item.CreatedDate).Days;
                                    var badgeColor = daysPending > 7 ? "bg-danger" : (daysPending > 3 ? "bg-warning text-dark" : "bg-info text-dark");

                                    <tr>
                                        <td class="ps-4 fw-bold">
                                            <a href="/ServiceTicket/Details/@item.Id" class="text-decoration-none text-dark">#@item.FisNo</a>
                                        </td>
                                        <td>
                                            <div class="d-flex flex-column">
                                                <span class="fw-semibold">@(item.DeviceBrand?.Name ?? "-") @item.DeviceModel</span>
                                                <span class="small text-muted">@item.Customer?.FirstName @item.Customer?.LastName</span>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25">@item.Status</span>
                                        </td>
                                        <td>
                                            <span class="badge @badgeColor rounded-pill">
                                                <i class="fa-regular fa-clock me-1"></i>@daysPending Gün
                                            </span>
                                        </td>
                                        <td class="text-end pe-4">
                                            <a href="/ServiceTicket/Edit/@item.Id" class="btn btn-sm btn-primary" title="İşleme Al">
                                                <i class="fa-solid fa-arrow-right"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-5 text-muted">
                                        <i class="fa-solid fa-check-circle fa-2x text-success mb-3"></i>
                                        <br />Harika! Bekleyen acil işiniz yok.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-bottom-0 py-3">
                <h5 class="card-title fw-bold mb-0 text-dark">Servis Durumları</h5>
            </div>
            <div class="card-body d-flex align-items-center justify-content-center position-relative">
                <canvas id="statusChart" style="max-height: 250px;"></canvas>
            </div>
            <div class="card-footer bg-white border-0 text-center pb-4">
                <small class="text-muted">Toplam @Model.ActiveTickets aktif kayıt</small>
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-bottom py-3 d-flex justify-content-between align-items-center">
        <h5 class="card-title fw-bold mb-0 text-dark">Son Servis Kayıtları</h5>
        <a href="/ServiceTicket/Index" class="btn btn-sm btn-light text-primary fw-semibold">Tümünü Gör</a>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light text-muted small text-uppercase">
                <tr>
                    <th class="ps-4">Servis No</th>
                    <th>Müşteri</th>
                    <th>Cihaz</th>
                    <th>Durum</th>
                    <th>Tarih</th>
                    <th class="text-end pe-4">İşlem</th>
                </tr>
            </thead>
            <tbody class="border-top-0">
                @if (Model.RecentTickets != null && Model.RecentTickets.Any())
                {
                    @foreach (var item in Model.RecentTickets)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-primary">#@item.FisNo</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-initials bg-light text-primary rounded-circle me-2 d-flex align-items-center justify-content-center" style="width:32px; height:32px; font-size: 12px; fw-bold">
                                        @(item.Customer?.FirstName?.Substring(0, 1) ?? "M")
                                    </div>
                                    <div>
                                        <div class="fw-semibold text-dark">@item.Customer?.FirstName @item.Customer?.LastName</div>
                                        <div class="small text-muted">@item.Customer?.Phone</div>
                                    </div>
                                </div>
                            </td>
                            <td>@(item.DeviceBrand?.Name ?? "-") @item.DeviceModel</td>
                            <td>
                                @{
                                    var statusClass = item.Status switch
                                    {
                                        "Tamamlandı" => "bg-success text-success",
                                        "İşlemde" => "bg-primary text-primary",
                                        "Bekliyor" => "bg-warning text-warning",
                                        "İptal" => "bg-danger text-danger",
                                        _ => "bg-secondary text-secondary"
                                    };
                                }
                                <span class="badge @statusClass bg-opacity-10 px-2 py-1 rounded-pill">@item.Status</span>
                            </td>
                            <td class="text-muted small">@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                            <td class="text-end pe-4">
                                <a href="/ServiceTicket/Details/@item.Id" class="btn btn-sm btn-icon btn-light text-muted" title="Detay">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center py-5 text-muted">
                            <i class="fa-solid fa-inbox fa-2x mb-3 d-block opacity-25"></i>
                            Henüz kayıt bulunmuyor.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // SADECE DURUM GRAFİĞİ KALDI (Gelir Grafiği Silindi)
        const ctxStatus = document.getElementById('statusChart').getContext('2d');
        new Chart(ctxStatus, {
            type: 'doughnut',
            data: {
                labels: [@Html.Raw(Model.TicketStatusLabels)],
                datasets: [{
                    data: [@Model.TicketStatusCounts],
                    backgroundColor: ['#fbbf24', '#2563eb', '#ef4444', '#10b981', '#6b7280'],
                    borderWidth: 0,
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                cutout: '75%',
                plugins: {
                    legend: { position: 'bottom', labels: { usePointStyle: true, padding: 20 } }
                }
            }
        });
    </script>
}