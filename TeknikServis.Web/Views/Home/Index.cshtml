@using TeknikServis.Web.Extensions
@model TeknikServis.Web.Models.DashboardViewModel

@{
    ViewData["Title"] = "Genel Bakış";
}

@if (Model == null)
{
    <div class="alert alert-danger">
        Veri yüklenemedi. Lütfen çıkış yapıp tekrar giriş yapınız.
    </div>
    return;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-dark mb-0">Şube Durumu</h2>
        <p class="text-muted small">@User.GetBranchName() şubesi anlık istatistikleri</p>
    </div>
    <a asp-controller="ServiceTicket" asp-action="Create" class="btn btn-primary">
        <i class="fa-solid fa-plus me-2"></i>Hızlı Kayıt Aç
    </a>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card shadow-sm border-start border-4 border-warning h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="overflow-hidden me-2">
                        <h6 class="text-muted text-uppercase small fw-bold text-truncate">Bekleyen</h6>
                        <h2 class="fw-bold text-dark mb-0 text-truncate" title="@Model.PendingTickets">@Model.PendingTickets</h2>
                    </div>
                    <div class="bg-warning bg-opacity-10 text-warning rounded-circle d-flex align-items-center justify-content-center flex-shrink-0" style="width: 50px; height: 50px;">
                        <i class="fa-solid fa-clock fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-start border-4 border-info h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="overflow-hidden me-2">
                        <h6 class="text-muted text-uppercase small fw-bold text-truncate">İşlemde</h6>
                        <h2 class="fw-bold text-dark mb-0 text-truncate" title="@Model.InProgressTickets">@Model.InProgressTickets</h2>
                    </div>
                    <div class="bg-info bg-opacity-10 text-info rounded-circle d-flex align-items-center justify-content-center flex-shrink-0" style="width: 50px; height: 50px;">
                        <i class="fa-solid fa-screwdriver-wrench fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-start border-4 border-success h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="overflow-hidden me-2">
                        <h6 class="text-muted text-uppercase small fw-bold text-truncate">Tamamlanan</h6>
                        <h2 class="fw-bold text-dark mb-0 text-truncate" title="@Model.CompletedTickets">@Model.CompletedTickets</h2>
                    </div>
                    <div class="bg-success bg-opacity-10 text-success rounded-circle d-flex align-items-center justify-content-center flex-shrink-0" style="width: 50px; height: 50px;">
                        <i class="fa-solid fa-check fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-start border-4 border-secondary h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="overflow-hidden me-2">
                        <h6 class="text-muted text-uppercase small fw-bold text-truncate">Toplam</h6>
                        <h2 class="fw-bold text-dark mb-0 text-truncate" title="@Model.TotalTickets">@Model.TotalTickets</h2>
                    </div>
                    <div class="bg-secondary bg-opacity-10 text-secondary rounded-circle d-flex align-items-center justify-content-center flex-shrink-0" style="width: 50px; height: 50px;">
                        <i class="fa-solid fa-list fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-md-3">
    <div class="card shadow-sm border-start border-4 border-primary h-100">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div class="overflow-hidden me-2">
                    <h6 class="text-muted text-uppercase small fw-bold text-truncate">Toplam Ciro</h6>
                    <h2 class="fw-bold text-primary mb-0 text-truncate" title="₺@Model.TotalEarnings.ToString("N2")">
                        ₺@Model.TotalEarnings.ToString("N2")
                    </h2>
                </div>
                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center flex-shrink-0" style="width: 50px; height: 50px;">
                    <i class="fa-solid fa-wallet fs-4"></i>
                </div>
            </div>
        </div>
    </div>
</div>
<br />

<div class="card shadow-sm">
    <div class="card-header bg-white py-3 border-bottom">
        <h5 class="card-title mb-0 fw-bold">Son Gelen Cihazlar</h5>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light small text-uppercase text-muted">
                <tr>
                    <th class="ps-4">Fiş No</th>
                    <th>Müşteri</th>
                    <th>Cihaz</th>
                    <th>Durum</th>
                    <th>Tarih</th>
                    <th class="text-end pe-4">Detay</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.LastTickets)
                {
                    <tr>
                        <td class="ps-4">
                            <span class="badge bg-dark font-monospace">@(item.FisNo ?? "-")</span>
                        </td>

                        <td class="fw-bold">@item.Customer?.FirstName @item.Customer?.LastName</td>

                        <td>
                            @(item.DeviceBrand != null ? item.DeviceBrand.Name : "-") @item.DeviceModel
                        </td>

                        <td>
                            @if (item.Status == "Bekliyor")
                            {
                                <span class="badge bg-warning text-dark">Bekliyor</span>
                            }
                            else if (item.Status == "Tamamlandı")
                            {
                                <span class="badge bg-success">Bitti</span>
                            }
                            else
                            {
                                <span class="badge bg-info">@item.Status</span>
                            }
                        </td>
                        <td class="text-muted small">@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                        <td class="text-end pe-4">
                            <a asp-controller="ServiceTicket" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light border">
                                <i class="fa-solid fa-chevron-right"></i>
                            </a>
                        </td>
                    </tr>
                }
                @if (Model.LastTickets.Count == 0)
                {
                    <tr>
                        <td colspan="6" class="text-center py-4 text-muted">Henüz kayıt yok.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>