@model IEnumerable<TeknikServis.Core.Entities.ServiceTicket>

@{
    ViewData["Title"] = "Servis Kayıtları";

    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    string search = ViewBag.Search as string;
    string status = ViewBag.Status as string;
}

<div class="card bg-light border-0 mb-4">
    <div class="card-body p-3">
        <form asp-action="Index" method="get" class="row g-2 align-items-center">

            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="fa-solid fa-search text-muted"></i></span>
                    <input type="text" name="s" value="@search" class="form-control" placeholder="Fiş No, Seri No, Marka veya Model..." />
                </div>
            </div>

            <div class="col-md-4">
                @* --- GÜNCELLENEN SELECT KISMI --- *@
                <select name="status" class="form-select">
                    <option value="">-- Tüm Durumlar --</option>
                    <option value="Bekliyor" selected="@(status == "Bekliyor")">Bekliyor</option>
                    <option value="İşlemde" selected="@(status == "İşlemde")">İşlemde</option>
                    <option value="Parça Bekliyor" selected="@(status == "Parça Bekliyor")">Parça Bekliyor</option>

                    <option value="Ödeme Bekleniyor" selected="@(status == "Ödeme Bekleniyor")">Ödeme Bekleniyor</option>
                    <option value="Ödeme Yapıldı" selected="@(status == "Ödeme Yapıldı")">Ödeme Yapıldı</option>
                    <option value="Tamamlandı" selected="@(status == "Tamamlandı")">Tamamlandı</option>
                    <option value="İptal" selected="@(status == "İptal")">İptal</option>
                </select>
                @* -------------------------------- *@
            </div>

            <div class="col-md-2 d-flex gap-2">
                <button type="submit" class="btn btn-primary w-100">Filtrele</button>
                @if (!string.IsNullOrEmpty(search) || !string.IsNullOrEmpty(status))
                {
                    <a asp-action="Index" class="btn btn-outline-secondary" title="Filtreleri Temizle"><i class="fa-solid fa-xmark"></i></a>
                }
            </div>
        </form>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-dark mb-0">Servis Takip</h2>
        <p class="text-muted small">Aktif arıza kayıtları listesi</p>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="fa-solid fa-plus me-2"></i>Yeni Kayıt Aç
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-muted text-uppercase small">
                    <tr>
                        <th class="ps-4">Fiş No</th>
                        <th>Müşteri</th>
                        <th>Cihaz Bilgisi</th>
                        <th>Seri No</th>
                        <th>Durum</th>
                        <th>Kalan Gün</th>
                        <th>Tarih</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <span class="badge bg-dark font-monospace">@(item.FisNo ?? "-")</span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar bg-light rounded-circle me-2 d-flex align-items-center justify-content-center" style="width:35px; height:35px;">
                                        <i class="fa-solid fa-user text-secondary"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold d-flex align-items-center gap-2">
                                            @item.Customer?.FirstName @item.Customer?.LastName

                                            @if (!string.IsNullOrEmpty(item.Customer?.CompanyName))
                                            {
                                                <span class="text-muted small fw-normal">(@item.Customer.CompanyName)</span>
                                            }

                                            @if (item.Customer != null && item.Customer.IsDeleted)
                                            {
                                                <span class="badge bg-danger bg-opacity-75" style="font-size: 0.65rem;">
                                                    <i class="fa-solid fa-user-slash me-1"></i>SİLİNDİ
                                                </span>
                                            }
                                        </div>
                                        <div class="small text-muted">@item.Customer?.Phone</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded-circle p-2 me-3 text-primary">
                                        <i class="fa-solid fa-mobile-screen"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">
                                            @(item.DeviceBrand != null ? item.DeviceBrand.Name : "-") @item.DeviceModel
                                        </div>
                                        <div class="small text-muted">ID: @item.Id.ToString().Substring(0, 8)...</div>
                                    </div>
                                </div>
                            </td>
                            <td class="font-monospace">@item.SerialNumber</td>

                            @* --- GÜNCELLENEN DURUM SÜTUNU --- *@
                            <td>
                                @if (item.Status == "Bekliyor")
                                {
                                    <span class="badge bg-warning text-dark rounded-pill"><i class="fa-regular fa-clock me-1"></i>Bekliyor</span>
                                }
                                else if (item.Status == "Tamamlandı")
                                {
                                    <span class="badge bg-success rounded-pill"><i class="fa-solid fa-check me-1"></i>Bitti</span>
                                }
                                /* --- YENİ EKLENEN KISIM --- */
                                else if (item.Status == "Ödeme Bekleniyor")
                                {
                                    <span class="badge bg-info text-dark rounded-pill"><i class="fa-solid fa-wallet me-1"></i>Ödeme Bekliyor</span>
                                }
                                else if (item.Status == "Ödeme Yapıldı")
                                {
                                    <span class="badge bg-success rounded-pill"><i class="fa-solid fa-receipt me-1"></i>Ödeme Yapıldı</span>
                                }
                                /* -------------------------- */
                                else
                                {
                                    <span class="badge bg-info rounded-pill">@item.Status</span>
                                }
                            </td>
                            @* -------------------------------- *@

                            <td>
                                @{
                                    // Eğer işlem tamamlandıysa veya iptalse gün saymaya gerek yok
                                    if (item.Status == "Tamamlandı" || item.Status == "İptal" || item.Status == "Teslim Edildi")
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                    else
                                    {
                                        // Maksimum servis süresi (Örn: 20 gün)
                                        int maxGun = 20;
                                        // Geçen gün sayısı
                                        var gecenSure = (DateTime.Now - item.CreatedDate).TotalDays;
                                        int kalanGun = maxGun - (int)gecenSure;

                                        if (kalanGun > 10)
                                        {
                                            <span class="badge bg-success">@kalanGun Gün</span>
                                        }
                                        else if (kalanGun >= 0)
                                        {
                                            <span class="badge bg-warning text-dark">@kalanGun Gün</span>
                                        }
                                        else
                                        {
                                            // Süre aşıldıysa negatif gösterir
                                            <span class="badge bg-danger">Aşıldı (@Math.Abs(kalanGun))</span>
                                        }
                                    }
                                }
                            </td>

                            <td class="text-muted small">@item.CreatedDate.ToString("dd MMM yyyy")</td>

                            <td class="text-end pe-4">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-dark hover-scale" title="Düzenle">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>

                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info hover-scale" title="Detaylar">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>

                                    @if (User.IsInRole("Admin") || User.HasClaim(x => x.Type == "Permission" && x.Value == "Delete"))
                                    {
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline delete-form">
                                            <button type="submit" class="btn btn-sm btn-outline-danger hover-scale" title="Sil">
                                                <i class="fa-solid fa-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }

                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="8" class="text-center py-5 text-muted">
                                <i class="fa-solid fa-folder-open fs-1 mb-3 d-block text-secondary opacity-50"></i>
                                Henüz kayıt bulunamadı.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (totalPages > 1)
    {
        <div class="card-footer bg-white py-3 border-top">
            <nav aria-label="Sayfalama">
                <ul class="pagination justify-content-center mb-0 shadow-sm">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link border-0" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-s="@search" asp-route-status="@status">
                            <i class="fa-solid fa-chevron-left small"></i> Önceki
                        </a>
                    </li>

                    @for (int i = 1; i <= totalPages; i++)
                    {
                        if (i == 1 || i == totalPages || (i >= currentPage - 2 && i <= currentPage + 2))
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link border-0 @(i == currentPage ? "fw-bold" : "")" asp-action="Index" asp-route-page="@i" asp-route-s="@search" asp-route-status="@status">@i</a>
                            </li>
                        }
                        else if (i == currentPage - 3 || i == currentPage + 3)
                        {
                            <li class="page-item disabled"><span class="page-link border-0">...</span></li>
                        }
                    }

                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link border-0" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-s="@search" asp-route-status="@status">
                            Sonraki <i class="fa-solid fa-chevron-right small"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.querySelectorAll('.delete-form').forEach(form => {
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                const formElement = this;
                Swal.fire({
                    title: 'Emin misiniz?',
                    text: "Bu servis kaydı silinecek! Bu işlem geri alınamaz.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Evet, Sil!',
                    cancelButtonText: 'Vazgeç'
                }).then((result) => {
                    if (result.isConfirmed) {
                        formElement.submit();
                    }
                });
            });
        });
    </script>
}