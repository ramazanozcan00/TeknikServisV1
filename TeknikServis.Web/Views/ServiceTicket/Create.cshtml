@model TeknikServis.Core.Entities.ServiceTicket

@{
    ViewData["Title"] = "Yeni Servis Kaydı";
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0 fw-bold"><i class="fa-solid fa-plus-circle me-2"></i>Cihaz Kabul Formu</h5>
                </div>
                <div class="card-body p-4">

                    <form asp-action="Create" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Müşteri <span class="text-danger">*</span></label>
                            <div class="d-flex gap-2">
                                <div class="flex-grow-1">
                                    <select asp-for="CustomerId" class="form-select" id="customerSelect" asp-items="ViewBag.CustomerList" required>
                                        <option value="">-- Müşteri Seçiniz --</option>
                                    </select>
                                    <span asp-validation-for="CustomerId" class="text-danger small"></span>
                                </div>
                                <a asp-controller="Customer" asp-action="Create" class="btn btn-success text-nowrap d-flex align-items-center" title="Yeni Müşteri Ekle">
                                    <i class="fa-solid fa-user-plus me-1"></i> Yeni Ekle
                                </a>
                            </div>
                        </div>

                        <h6 class="text-muted text-uppercase small fw-bold border-bottom pb-2 mb-3">Cihaz Bilgileri</h6>

                        <div class="row g-3 mb-3">
                            <div class="col-md-4">
                                <label class="form-label fw-bold small">Cihaz Türü <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fa-solid fa-laptop text-primary"></i></span>
                                    <select asp-for="DeviceTypeId" class="form-select" asp-items="ViewBag.DeviceTypes" required>
                                        <option value="">-- Seçiniz --</option>
                                    </select>
                                    <a asp-area="Admin" asp-controller="Definition" asp-action="Index" class="btn btn-outline-secondary" title="Ekle">
                                        <i class="fa-solid fa-plus"></i>
                                    </a>
                                </div>
                                <span asp-validation-for="DeviceTypeId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label fw-bold small">Marka <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fa-solid fa-tag text-primary"></i></span>
                                    <select asp-for="DeviceBrandId" class="form-select" asp-items="ViewBag.DeviceBrands" required>
                                        <option value="">-- Seçiniz --</option>
                                    </select>
                                    <a asp-area="Admin" asp-controller="Definition" asp-action="Index" class="btn btn-outline-secondary" title="Ekle">
                                        <i class="fa-solid fa-plus"></i>
                                    </a>
                                </div>
                                <span asp-validation-for="DeviceBrandId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label fw-bold small">Model <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fa-solid fa-mobile-screen text-primary"></i></span>
                                    <input asp-for="DeviceModel" class="form-control" placeholder="Örn: iPhone 13" required />
                                </div>
                                <span asp-validation-for="DeviceModel" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label class="form-label fw-bold small">Seri No (IMEI) <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fa-solid fa-barcode text-secondary"></i></span>
                                    <input asp-for="SerialNumber" class="form-control font-monospace" placeholder="Cihazın seri numarası" required />
                                </div>
                                <span asp-validation-for="SerialNumber" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold small">Garanti Durumu</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fa-solid fa-shield-halved text-success"></i></span>
                                    <select asp-for="IsWarranty" class="form-select">
                                        <option value="false">Garantisiz</option>
                                        <option value="true">Garantili</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <h6 class="text-muted text-uppercase small fw-bold border-bottom pb-2 mb-3">Servis Detayları</h6>

                        <div class="mb-3">
                            <label class="form-label fw-bold small">Arıza Açıklaması <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-wrench text-warning"></i></span>
                                <textarea asp-for="ProblemDescription" class="form-control" rows="3" placeholder="Müşterinin belirttiği sorunlar..." required></textarea>
                            </div>
                            <span asp-validation-for="ProblemDescription" class="text-danger small"></span>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label class="form-label fw-bold small">Cihaz Fotoğrafları (Maks. 4)</label>
                                <input type="file" name="photos" id="photoInput" class="form-control" accept="image/*" multiple />
                                <div class="form-text text-muted small">Ctrl tuşu ile birden fazla seçebilirsiniz.</div>
                                <div id="photoWarning" class="text-danger small fw-bold d-none">En fazla 4 fotoğraf!</div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold small">Teknisyen Ata</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fa-solid fa-user-gear text-info"></i></span>
                                    <select asp-for="TechnicianId" class="form-select" asp-items="ViewBag.Technicians">
                                        <option value="">-- Havuzda Beklesin --</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 border-top pt-3">
                            <a asp-action="Index" class="btn btn-light border px-4">İptal</a>
                            <button type="submit" class="btn btn-primary px-5 fw-bold shadow-sm">
                                <i class="fa-solid fa-save me-2"></i>Kaydı Oluştur
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#customerSelect').select2({
                theme: "bootstrap-5",
                width: '100%',
                placeholder: "Müşteri adı veya telefon yazın...",
                allowClear: true
            });

            $('#photoInput').on('change', function() {
                if (this.files.length > 4) {
                    $('#photoWarning').removeClass('d-none');
                    this.value = "";
                    alert("En fazla 4 fotoğraf yükleyebilirsiniz.");
                } else {
                    $('#photoWarning').addClass('d-none');
                }
            });
        });
    </script>
}