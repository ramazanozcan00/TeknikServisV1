@model TeknikServis.Core.Entities.ServiceTicket

@{
    ViewData["Title"] = "Yeni Servis Kaydı";
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />

<div class="container-fluid px-4 py-4 soft-bg">

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="modern-form" novalidate>

        <div class="form-header shadow-sm rounded-4 p-4 mb-4 bg-white d-flex justify-content-between align-items-center position-relative overflow-hidden">
            <div class="position-absolute top-0 start-0 h-100 bg-primary" style="width: 5px;"></div>
            <div>
                <h2 class="fw-bold text-dark mb-1 d-flex align-items-center">
                    <span class="icon-circle bg-primary bg-opacity-10 text-primary me-3">
                        <i class="fa-solid fa-file-circle-plus"></i>
                    </span>
                    Yeni Servis Kaydı
                </h2>
                <p class="text-muted ms-5 ps-2 mb-0 small">Arızalı cihaz kabulü ve servis fişi oluşturma ekranı</p>
            </div>
            <div class="d-none d-md-block">
                <div class="date-chip text-primary bg-primary bg-opacity-10 border border-primary border-opacity-10">
                    <i class="fa-regular fa-calendar me-2"></i> @DateTime.Now.ToString("dd.MM.yyyy")
                </div>
            </div>
        </div>

        <div class="block rounded-4 shadow-sm p-4 mb-4">
            <h6 class="block-title text-primary text-uppercase mb-3" style="font-size: 0.8rem; letter-spacing: 1px;">
                <i class="fa-solid fa-user-tag me-2"></i>Müşteri Seçimi
            </h6>

            <div class="d-flex align-items-center gap-2">
                <div class="bg-light text-secondary rounded-3 d-flex align-items-center justify-content-center border" style="width: 42px; height: 38px;">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </div>

                <div class="flex-grow-1">
                    <select asp-for="CustomerId" id="customerSelect" asp-items="ViewBag.CustomerList" class="form-select" required>
                        <option value="">-- Müşteri Ara --</option>
                    </select>
                </div>

                <a asp-controller="Customer" asp-action="Create" class="btn btn-primary rounded-3 px-3 d-flex align-items-center justify-content-center" style="height: 38px;" title="Yeni Müşteri">
                    <i class="fa-solid fa-plus"></i>
                </a>
            </div>
        </div>

        <div class="block rounded-4 shadow-sm p-4 mb-4">
            <h6 class="block-title text-info text-uppercase mb-4" style="font-size: 0.8rem; letter-spacing: 1px;">
                <i class="fa-solid fa-laptop-medical me-2"></i>Cihaz Kimliği
            </h6>

            <div class="row g-3">
                <div class="col-md-6 col-lg-3">
                    <label class="form-label fw-bold small text-secondary">Cihaz Türü <span class="text-danger">*</span></label>
                    <div class="input-group">
                        <span class="input-group-text bg-light text-secondary"><i class="fa-solid fa-desktop"></i></span>
                        <select asp-for="DeviceTypeId" asp-items="ViewBag.DeviceTypes" class="form-select" required>
                            <option value="">Seçiniz</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <label class="form-label fw-bold small text-secondary">Marka <span class="text-danger">*</span></label>
                    <div class="input-group">
                        <span class="input-group-text bg-light text-secondary"><i class="fa-solid fa-copyright"></i></span>
                        <select asp-for="DeviceBrandId" asp-items="ViewBag.DeviceBrands" class="form-select" required>
                            <option value="">Seçiniz</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <label class="form-label fw-bold small text-secondary">Model <span class="text-danger">*</span></label>
                    <div class="input-group">
                        <span class="input-group-text bg-light text-secondary"><i class="fa-solid fa-mobile-screen"></i></span>
                        <input asp-for="DeviceModel" class="form-control" placeholder="Örn: iPhone 13 Pro" required />
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <label class="form-label fw-bold small text-secondary">Seri No / IMEI <span class="text-danger">*</span></label>
                    <div class="input-group">
                        <span class="input-group-text bg-light text-secondary"><i class="fa-solid fa-barcode"></i></span>
                        <input asp-for="SerialNumber" class="form-control font-monospace" placeholder="Benzersiz numara" required />
                    </div>
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-bold small text-secondary">Fatura Tarihi</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light text-secondary"><i class="fa-solid fa-receipt"></i></span>
                        <input type="date" asp-for="InvoiceDate" class="form-control" />
                    </div>
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-bold small text-secondary">Garanti Durumu</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light text-secondary"><i class="fa-solid fa-shield-halved"></i></span>
                        <select asp-for="IsWarranty" class="form-select">
                            <option value="false">Garantisiz</option>
                            <option value="true">Garantili</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-bold small text-secondary">Aksesuarlar</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light text-secondary"><i class="fa-solid fa-plug"></i></span>
                        <input asp-for="Accessories" class="form-control" placeholder="Şarj, kılıf..." />
                    </div>
                </div>
            </div>
        </div>

        <div class="block rounded-4 shadow-sm p-4 mb-4">
            <div class="mb-4">
                <h6 class="block-title text-danger text-uppercase mb-2" style="font-size: 0.8rem; letter-spacing: 1px;">
                    <i class="fa-solid fa-triangle-exclamation me-2"></i>Arıza Bilgisi <span class="text-danger">*</span>
                </h6>
                <div class="form-floating">
                    <textarea asp-for="ProblemDescription" class="form-control bg-light border-0" style="height: 120px" placeholder="Arıza detayları" required></textarea>
                    <label for="ProblemDescription" class="text-muted">Müşterinin belirttiği şikayet ve arıza detayları...</label>
                </div>
                <span asp-validation-for="ProblemDescription" class="text-danger small"></span>
            </div>

            <hr class="text-muted opacity-25 my-4">

            <div>
                <h6 class="block-title text-warning text-uppercase mb-2" style="font-size: 0.8rem; letter-spacing: 1px;">
                    <i class="fa-solid fa-magnifying-glass-chart me-2"></i>Fiziksel Kontrol
                </h6>
                <div class="form-floating">
                    <textarea asp-for="PhysicalDamage" class="form-control bg-light border-0" style="height: 100px" placeholder="Fiziksel durum"></textarea>
                    <label for="PhysicalDamage" class="text-muted">Cihaz üzerindeki çizik, kırık, darbe durumu...</label>
                </div>
            </div>
        </div>

        <div class="block rounded-4 shadow-sm p-4 mb-4">
            <h6 class="block-title text-secondary text-uppercase mb-4" style="font-size: 0.8rem; letter-spacing: 1px;">
                <i class="fa-solid fa-clipboard-check me-2"></i>İşlem Detayları
            </h6>

            <div class="row g-4 align-items-start">

                <div class="col-md-4">
                    <label class="form-label fw-bold small text-secondary">Teknisyen Ata</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white text-muted"><i class="fa-solid fa-user-gear"></i></span>
                        <select asp-for="TechnicianId" asp-items="ViewBag.Technicians" class="form-select">
                            <option value="">-- Havuza Bırak --</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-bold small text-secondary">Fotoğraflar (Max 4)</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white text-muted"><i class="fa-solid fa-camera"></i></span>
                        <input type="file" id="photoInput" name="photos" multiple accept="image/*" class="form-control" />
                    </div>
                    <small id="photoWarning" class="text-danger fw-bold d-none mt-1 d-block"><i class="fa-solid fa-circle-exclamation me-1"></i>En fazla 4 fotoğraf!</small>
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-bold small text-secondary">Ek Döküman (PDF)</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white text-danger"><i class="fa-solid fa-file-pdf"></i></span>
                        <input type="file" name="pdfFile" accept=".pdf" class="form-control" />
                    </div>
                </div>

            </div>

            <div class="d-flex justify-content-end gap-2 mt-5 pt-3 border-top">
                <a asp-action="Index" class="btn btn-light px-4 py-2 rounded-3 text-muted fw-bold border hover-scale">
                    <i class="fa-solid fa-xmark me-2"></i>Vazgeç
                </a>
                <button type="submit" class="btn btn-primary px-5 py-2 rounded-3 shadow-lg fw-bold hover-scale text-uppercase" style="letter-spacing: 1px;">
                    <i class="fa-solid fa-floppy-disk me-2"></i>Kaydı Oluştur
                </button>
            </div>
        </div>

    </form>
</div>

<style>
    .soft-bg {
        background-color: #f3f4f6;
        min-height: 100vh;
    }

    .block {
        background: #fff;
        border: 1px solid rgba(0,0,0,0.03);
    }

    .icon-circle {
        width: 42px;
        height: 42px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        font-size: 1.2rem;
    }

    .date-chip {
        padding: 8px 16px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.9rem;
    }

    /* Genel Input Group Stilleri */
    .input-group-text {
        border-right: none;
        background-color: #f8f9fa;
    }

    .input-group .form-control, .input-group .form-select {
        border-left: none;
    }

    .input-group:focus-within .input-group-text {
        border-color: #86b7fe;
        background-color: #fff;
    }

    .input-group:focus-within .form-control, .input-group:focus-within .form-select {
        border-color: #86b7fe;
        box-shadow: none;
        border-left: none;
    }

    .hover-scale:hover {
        transform: translateY(-2px);
        transition: all 0.2s;
    }
</style>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(function(){
            $('#customerSelect').select2({
                theme: "bootstrap-5",
                width: '100%',
                placeholder: "Müşteri adı veya telefon ile arayın..."
            });

            $("#photoInput").on("change", function(e){
                if(e.target.files.length > 4){
                    $("#photoWarning").removeClass("d-none");
                    e.target.value = "";
                } else {
                    $("#photoWarning").addClass("d-none");
                }
            });
        });
    </script>
}





