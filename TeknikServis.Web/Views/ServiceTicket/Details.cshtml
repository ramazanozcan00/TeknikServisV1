@model TeknikServis.Core.Entities.ServiceTicket
@using TeknikServis.Web.Extensions

@{
    ViewData["Title"] = "Servis Detayı";

    // --- YASAL SÜRE HESAPLAMALARI ---
    var yasalBitisTarihi = Model.CreatedDate.AddBusinessDays(21);
    var kalanIsGunu = yasalBitisTarihi.GetRemainingBusinessDays();
    var toplamSure = (yasalBitisTarihi - Model.CreatedDate).TotalDays;
    var gecenSure = (DateTime.Now - Model.CreatedDate).TotalDays;

    var yuzde = (toplamSure > 0) ? (int)((gecenSure / toplamSure) * 100) : 0;
    if (yuzde > 100) yuzde = 100;
    if (yuzde < 0) yuzde = 0;

    string barColor = yuzde > 90 ? "bg-danger" : (yuzde > 70 ? "bg-warning" : "bg-success");
    string kartRengi = "border-success";
    string baslikRengi = "bg-success";
    string ikon = "fa-calendar-check";
    string durumMesaji = "Yasal süre içindesiniz.";

    if (Model.Status == "Tamamlandı" || Model.Status == "İptal")
    {
        kartRengi = "border-secondary";
        baslikRengi = "bg-secondary";
        ikon = "fa-flag-checkered";
        durumMesaji = "İşlem sonuçlandı.";
    }
    else if (DateTime.Now > yasalBitisTarihi)
    {
        kartRengi = "border-danger";
        baslikRengi = "bg-danger";
        ikon = "fa-triangle-exclamation";
        durumMesaji = "YASAL SÜRE AŞILDI!";
    }
    else if (kalanIsGunu <= 5)
    {
        kartRengi = "border-warning";
        baslikRengi = "bg-warning text-dark";
        ikon = "fa-clock";
        durumMesaji = "Dikkat! Süre dolmak üzere.";
    }
}

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <div class="d-flex align-items-center gap-3">
            @if (User.IsInRole("Technician"))
            {
                <a asp-action="TechnicianPanel" class="btn btn-outline-secondary shadow-sm"><i class="fa-solid fa-arrow-left me-2"></i>Panele Dön</a>
            }
            else
            {
                <a asp-action="Index" class="btn btn-outline-secondary shadow-sm"><i class="fa-solid fa-arrow-left me-2"></i>Geri</a>
            }
            <h4 class="mb-0 fw-bold text-secondary">
                Fiş No: <span class="text-primary font-monospace">#@(Model.FisNo ?? "-")</span>
            </h4>
        </div>

        <div class="d-flex gap-2 align-items-center">
            <a asp-action="Print" asp-route-id="@Model.Id" target="_blank" class="btn btn-dark shadow-sm">
                <i class="fa-solid fa-print me-2"></i>Yazdır
            </a>

            <button type="button" class="btn btn-success shadow-sm" onclick="sendWhatsappMessage('@Model.Id')">
                <i class="fa-brands fa-whatsapp me-2"></i>Cihaz Hazır Mesajı Gönder
            </button>

            @{
                string statusBadgeColor = "bg-info text-dark";
                if (Model.Status == "Tamamlandı" || Model.Status == "Ödeme Yapıldı") { statusBadgeColor = "bg-success"; }
                else if (Model.Status == "İptal") { statusBadgeColor = "bg-danger"; }
                else if (Model.Status == "Ödeme Bekleniyor") { statusBadgeColor = "bg-info text-dark"; }
            }
            <span class="badge @statusBadgeColor p-2 fs-6 shadow-sm">
                @Model.Status
            </span>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">

            @if (Model.Status == "Onarım Tamamlandı" && (User.IsInRole("Admin") || User.IsInRole("Personnel")))
            {
                <div class="alert alert-info d-flex justify-content-between align-items-center shadow-sm">
                    <span><i class="fa-solid fa-circle-info me-2"></i><strong>Onarım Bitti:</strong> Teknisyen @Model.TotalPrice?.ToString("C2") tutarında işlem tamamladı.</span>
                    <button type="button" class="btn btn-success fw-bold" onclick="openAccountModal('@Model.Id', '@(Model.TotalPrice?.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture))')">
                        <i class="fa-solid fa-file-invoice-dollar me-2"></i>Cariye Aktar ve Onayla
                    </button>
                </div>
            }

            <div class="card shadow-sm mb-4 border-0 border-top border-4 border-primary rounded-3 overflow-hidden">
                <div class="card-header bg-white fw-bold text-uppercase small py-3 d-flex justify-content-between align-items-center">
                    <span class="text-primary"><i class="fa-solid fa-laptop me-2"></i>Cihaz Bilgileri</span>
                    <span class="badge bg-light text-dark font-monospace border">SN: @Model.SerialNumber</span>
                </div>
                <div class="card-body bg-light bg-opacity-10">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h5 class="fw-bold text-dark mb-1">
                                @(Model.DeviceBrand?.Name ?? "-") <span class="text-muted">@Model.DeviceModel</span>
                            </h5>
                            <div class="text-muted small">
                                <i class="fa-solid fa-microchip me-1"></i>@(Model.DeviceType?.Name ?? "Belirtilmemiş")
                            </div>
                        </div>

                        @if (Model.IsWarranty)
                        {
                            <span class="badge bg-success bg-opacity-10 text-success border border-success px-3 py-2 rounded-pill">
                                <i class="fa-solid fa-shield-check me-1"></i>GARANTİLİ
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary bg-opacity-10 text-secondary border px-3 py-2 rounded-pill">
                                <i class="fa-solid fa-shield-xmark me-1"></i>GARANTİSİZ
                            </span>
                        }
                    </div>

                    <div class="row g-3 border-top pt-3 mt-2">
                        <div class="col-md-4">
                            <small class="text-muted fw-bold d-block mb-1">Fatura Tarihi</small>
                            <span class="text-dark">
                                <i class="fa-regular fa-calendar me-1 text-primary"></i>
                                @(Model.InvoiceDate.HasValue? Model.InvoiceDate.Value.ToString("dd.MM.yyyy") : "-")
                            </span>
                        </div>
                        <div class="col-md-4">
                            <small class="text-muted fw-bold d-block mb-1">Fiziksel Durum</small>
                            <span class="text-dark">
                                <i class="fa-solid fa-stethoscope me-1 text-danger"></i>
                                @(string.IsNullOrEmpty(Model.PhysicalDamage) ? "Hasar kaydı yok." : Model.PhysicalDamage)
                            </span>
                        </div>
                        <div class="col-md-4">
                            <small class="text-muted fw-bold d-block mb-1">Aksesuarlar</small>
                            <span class="text-dark">
                                <i class="fa-solid fa-headphones me-1 text-info"></i>
                                @(string.IsNullOrEmpty(Model.Accessories) ? "Teslim alınmadı." : Model.Accessories)
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4 border-0 rounded-3">
                <div class="card-header bg-light fw-bold text-uppercase small py-3 text-danger border-bottom-0">
                    <i class="fa-solid fa-triangle-exclamation me-2"></i>Arıza / Müşteri Şikayeti
                </div>
                <div class="card-body bg-white border-top">
                    <p class="lead fs-6 mb-0 text-dark">@Model.ProblemDescription</p>
                </div>
            </div>

            <div class="card shadow-sm mb-4 border-0 border-start border-4 border-secondary rounded-3">
                <div class="card-header bg-white fw-bold text-uppercase small py-3 text-secondary">
                    <i class="fa-solid fa-folder-open me-2"></i>Dosyalar ve Görseller
                </div>
                <div class="card-body bg-light">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="p-3 bg-white border rounded h-100 d-flex flex-column justify-content-center align-items-center text-center">
                                @if (!string.IsNullOrEmpty(Model.PdfPath))
                                {
                                    <i class="fa-regular fa-file-pdf text-danger fa-3x mb-2"></i>
                                    <h6 class="fw-bold mb-1">Servis Dökümanı</h6>
                                    <a href="@Model.PdfPath" target="_blank" class="btn btn-sm btn-outline-danger mt-2 stretched-link">
                                        <i class="fa-solid fa-eye me-1"></i>Görüntüle (PDF)
                                    </a>
                                }
                                else
                                {
                                    <i class="fa-regular fa-file text-muted fa-3x mb-2 opacity-25"></i>
                                    <span class="text-muted small">PDF yüklenmemiş.</span>
                                }
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="p-3 bg-white border rounded h-100 d-flex flex-column justify-content-center align-items-center">
                                @if (!string.IsNullOrEmpty(Model.PhotoPath))
                                {
                                    <div class="position-relative group-hover w-100 text-center">
                                        <img src="@Model.PhotoPath" class="img-fluid rounded shadow-sm" style="max-height: 150px; object-fit: cover;" />
                                        <a href="@Model.PhotoPath" target="_blank" class="btn btn-sm btn-primary mt-2 position-absolute top-50 start-50 translate-middle opacity-0 hover-opacity-100">
                                            <i class="fa-solid fa-magnifying-glass-plus"></i>
                                        </a>
                                    </div>
                                    <span class="small text-muted mt-2">Cihaz Fotoğrafı</span>
                                }
                                else
                                {
                                    <i class="fa-regular fa-image text-muted fa-3x mb-2 opacity-25"></i>
                                    <span class="text-muted small">Fotoğraf yok.</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @* Teknisyen Notları *@
            <div class="card shadow-sm mb-4 border-0 border-start border-4 border-info">
                <div class="card-header bg-white text-info fw-bold text-uppercase small py-3">
                    <i class="fa-solid fa-screwdriver-wrench me-2"></i>Teknisyen İşlemleri / Notları
                </div>
                <div class="card-body bg-light" style="max-height: 400px; overflow-y: auto;">
                    @if (!string.IsNullOrEmpty(Model.TechnicianNotes))
                    {
                        var notes = Model.TechnicianNotes.Split(new[] { '\n' }, StringSplitOptions.RemoveEmptyEntries).Reverse();
                        foreach (var note in notes)
                        {
                            <div class="card border-0 shadow-sm mb-2">
                                <div class="card-body p-3 d-flex align-items-start">
                                    <i class="fa-solid fa-pen-to-square text-info mt-1 me-3"></i>
                                    <div class="text-dark small">@note</div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-muted text-center small py-4">
                            <i class="fa-solid fa-clipboard-list mb-2 fs-3 opacity-25"></i><br>
                            Henüz işlem notu girilmedi.
                        </div>
                    }
                </div>
            </div>

            @* Yedek Parçalar *@
            <div class="card shadow-sm mb-4 border-0 border-start border-4 border-warning">
                <div class="card-header bg-white text-warning fw-bold text-uppercase small py-3">
                    <i class="fa-solid fa-boxes-stacked me-2"></i>Kullanılan Yedek Parçalar
                </div>
                <div class="card-body p-0">
                    @if (Model.UsedParts != null && Model.UsedParts.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 small align-middle">
                                <thead class="bg-light text-secondary">
                                    <tr>
                                        <th class="ps-3 py-3">Parça Adı</th>
                                        <th class="text-center">Adet</th>
                                        <th class="text-end">Birim Fiyat</th>
                                        <th class="text-end pe-3">Tutar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var part in Model.UsedParts)
                                    {
                                        <tr>
                                            <td class="ps-3 fw-bold text-dark">@(part.SparePart?.ProductName ?? "Silinmiş Parça")</td>
                                            <td class="text-center"><span class="badge bg-white text-dark border">@part.Quantity</span></td>
                                            <td class="text-end">@part.Price.ToString("C2")</td>
                                            <td class="text-end pe-3 fw-bold text-primary">@part.TotalPrice.ToString("C2")</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="bg-light border-top">
                                    <tr>
                                        <td colspan="3" class="text-end fw-bold text-muted py-3">Parça Toplamı:</td>
                                        <td class="text-end pe-3 fw-bold text-success fs-6">
                                            @Model.UsedParts.Sum(x => x.TotalPrice).ToString("C2")
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted">
                            <i class="fa-solid fa-box-open fs-3 mb-2 opacity-25"></i><br>
                            Bu işlemde henüz yedek parça kullanılmamıştır.
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            @* Müşteri Bilgileri *@
            <div class="card shadow-sm border-0 mb-3 rounded-3">
                <div class="card-body text-center p-4">
                    @if (Model.Customer != null && Model.Customer.IsDeleted)
                    {
                        <div class="alert alert-danger shadow-sm border-danger mb-4 text-start">
                            <div class="d-flex align-items-center mb-1">
                                <i class="fa-solid fa-user-xmark me-2 fs-5"></i>
                                <h6 class="fw-bold mb-0">Müşteri Silindi!</h6>
                            </div>
                            <p class="mb-0 small lh-sm">Müşteri sistemden silinmiştir.</p>
                        </div>
                    }
                    <div class="bg-primary bg-opacity-10 text-primary p-3 rounded-circle d-inline-block mb-3">
                        <i class="fa-solid fa-user-circle fa-3x"></i>
                    </div>
                    <h5 class="fw-bold text-dark mb-1">@Model.Customer?.FirstName @Model.Customer?.LastName</h5>
                    <p class="text-muted small mb-3">
                        <i class="fa-solid fa-phone me-1"></i> <a href="tel:@Model.Customer?.Phone" class="text-decoration-none text-muted">@Model.Customer?.Phone</a>
                    </p>
                    <div class="d-grid">
                        @if (Model.Customer != null && !Model.Customer.IsDeleted)
                        {
                            <a asp-controller="Customer" asp-action="Details" asp-route-id="@Model.CustomerId" class="btn btn-outline-primary btn-sm rounded-pill">
                                <i class="fa-solid fa-address-card me-1"></i>Profili Görüntüle
                            </a>
                        }
                    </div>
                </div>
            </div>

            @* Teknisyen Bilgisi *@
            <div class="card shadow-sm border-0 border-start border-4 border-info mb-3">
                <div class="card-body">
                    <h6 class="text-uppercase text-muted small fw-bold mb-3"><i class="fa-solid fa-user-gear me-2"></i>Sorumlu Teknisyen</h6>
                    @if (Model.Technician != null)
                    {
                        <div class="d-flex align-items-center">
                            <div class="bg-info text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 45px; height: 45px;">
                                <span class="fw-bold fs-5">@Model.Technician.FullName.Substring(0, 1)</span>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-0 text-dark">@Model.Technician.FullName</h6>
                                <span class="badge bg-info bg-opacity-10 text-info border border-info rounded-pill" style="font-size: 0.7rem;">Yetkili Personel</span>
                            </div>
                        </div>
                    }
                </div>
            </div>

            @* Yasal Süre Kartı *@
            <div class="card shadow-sm @kartRengi mb-3">
                <div class="card-header @baslikRengi text-white fw-bold d-flex align-items-center justify-content-between">
                    <span><i class="fa-solid @ikon me-2"></i>Yasal Süre</span>
                    <span class="badge bg-white text-dark bg-opacity-75">21 İş Günü</span>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between border-bottom pb-2 mb-2">
                        <span class="text-muted small">Giriş Tarihi:</span>
                        <span class="fw-bold small">@Model.CreatedDate.ToString("dd.MM.yyyy")</span>
                    </div>
                    @if (Model.Status != "Tamamlandı" && Model.Status != "İptal")
                    {
                        <div class="text-center mb-2">
                            <h2 class="fw-bold mb-0 display-6">@kalanIsGunu</h2>
                            <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">İş Günü Kaldı</small>
                        </div>
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar @barColor" role="progressbar" style="width: @yuzde%"></div>
                        </div>
                    }
                </div>
            </div>

            @* Durum ve Ücret Formu *@
            <div class="card shadow-sm border-warning">
                <div class="card-header bg-warning bg-opacity-25 fw-bold text-dark">
                    <i class="fa-solid fa-cash-register me-2"></i>Durum ve Ücret
                </div>
                <div class="card-body">
                    <form asp-action="ChangeStatus" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="mb-3">
                            <label class="form-label small fw-bold text-secondary">Toplam Servis Ücreti</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white fw-bold">₺</span>
                                <input type="number" name="price" value="@(Model.TotalPrice.HasValue? Model.TotalPrice.Value.ToString("0.##", System.Globalization.CultureInfo.InvariantCulture) : "")" class="form-control fw-bold text-end" step="0.01" min="0" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label small fw-bold text-secondary">İşlem Durumu</label>
                            <select name="status" class="form-select fw-bold">
                                <option value="Bekliyor" selected="@(Model.Status == "Bekliyor")">Bekliyor</option>
                                <option value="İşlemde" selected="@(Model.Status == "İşlemde")">İşlemde</option>
                                <option value="Parça Bekliyor" selected="@(Model.Status == "Parça Bekliyor")">Parça Bekliyor</option>
                                <option value="Onarım Tamamlandı" selected="@(Model.Status == "Onarım Tamamlandı")">Onarım Tamamlandı</option>
                                <option value="Ödeme Bekleniyor" selected="@(Model.Status == "Ödeme Bekleniyor")">Ödeme Bekleniyor</option>
                                <option value="Ödeme Yapıldı" selected="@(Model.Status == "Ödeme Yapıldı")">Ödeme Yapıldı</option>
                                <option value="Tamamlandı" selected="@(Model.Status == "Tamamlandı")" class="text-success">Tamamlandı</option>
                                <option value="İptal" selected="@(Model.Status == "İptal")" class="text-danger">İptal</option>
                            </select>
                        </div>
                        <button class="btn btn-warning w-100 fw-bold shadow-sm" type="submit">
                            <i class="fa-solid fa-check-circle me-2"></i>Değişiklikleri Kaydet
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@* Ödeme Tipi ve Cari Aktarım Modalı *@
<div class="modal fade" id="paymentModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content shadow-lg border-0">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title fw-bold"><i class="fa-solid fa-file-invoice-dollar me-2"></i>Cariye Aktar ve Onayla</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <input type="hidden" id="modalTicketId" />
                <div class="mb-4 text-center bg-light p-3 rounded border">
                    <small class="text-muted text-uppercase fw-bold d-block">Ödenmesi Gereken Toplam</small>
                    <div class="input-group input-group-lg mt-2">
                        <span class="input-group-text bg-white border-end-0 fw-bold text-success">₺</span>
                        <input type="number" id="modalAmount" class="form-control border-start-0 fw-bold text-success text-end" step="0.01" />
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold text-secondary">Ödeme Tipi / İşlem Şekli</label>
                    <select id="modalPaymentType" class="form-select form-select-lg fw-bold">
                        <option value="Nakit">💵 Nakit</option>
                        <option value="Kredi Kartı">💳 Kredi Kartı</option>
                        <option value="Havale">🏦 Havale / EFT</option>
                        <option value="Borç">📝 Borç (Cari Hesaba İşle)</option>
                        <option value="Garantili">🛡️ Garantili (Ücretsiz İşlem)</option>
                    </select>
                    <div class="form-text mt-2 small">Seçtiğiniz işleme göre müşterinin cari hareketi oluşturulacaktır.</div>
                </div>
            </div>
            <div class="modal-footer bg-light border-0">
                <button type="button" class="btn btn-link text-secondary text-decoration-none fw-bold" data-bs-dismiss="modal">Vazgeç</button>
                <button type="button" class="btn btn-success px-4 fw-bold shadow-sm" onclick="submitToAccount()">
                    <i class="fa-solid fa-check-double me-2"></i>İşlemi Tamamla ve Servisi Kapat
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-opacity-100:hover {
        opacity: 1 !important;
    }

    .hover-shadow:hover {
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
    }

    .transition-all {
        transition: all 0.3s ease;
    }
</style>

@section Scripts {
    <script>
        // Modal açılırken tutarı standart formata getiriyoruz
        function openAccountModal(id, amount) {
            document.getElementById('modalTicketId').value = id;

            // Sayısal değeri JS tarafında düzgün algılayıp inputa yazıyoruz
            var cleanAmount = parseFloat(amount.replace(',', '.'));
            document.getElementById('modalAmount').value = cleanAmount.toFixed(2);

            var myModal = new bootstrap.Modal(document.getElementById('paymentModal'));
            myModal.show();
        }

        function submitToAccount() {
            var id = document.getElementById('modalTicketId').value;
            var amount = document.getElementById('modalAmount').value;
            var type = document.getElementById('modalPaymentType').value;

            if (!amount || amount < 0) {
                showToast("Hata", "Geçerli bir tutar giriniz.", "text-white bg-danger");
                return;
            }

            $.post("/ServiceTicket/ApproveToAccount", {
                ticketId: id,
                finalAmount: amount,
                paymentType: type
            }, function(res) {
                if (res.success) {
                    // Modal'ı kapat
                    var modalEl = document.getElementById('paymentModal');
                    var modalInstance = bootstrap.Modal.getInstance(modalEl);
                    if(modalInstance) modalInstance.hide();

                    // Başarı Toast'u göster
                    showToast("İşlem Başarılı", res.message, "text-white bg-success");

                    // Sayfayı kısa bir gecikmeyle yenile
                    setTimeout(function() {
                        location.reload();
                    }, 2000);
                } else {
                    showToast("Hata", res.message, "text-white bg-danger");
                }
            });
        }

        // Yardımcı Toast Fonksiyonu
        function showToast(title, message, bgClass) {
            var toastHtml = `
                <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 1060;">
                    <div id="liveToast" class="toast ${bgClass} border-0" role="alert" aria-live="assertive" aria-atomic="true">
                        <div class="toast-header">
                            <strong class="me-auto">${title}</strong>
