@model TeknikServis.Core.Entities.ServiceTicket
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Sevkiyat Etiketi - @Model.FisNo</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
            text-align: center;
        }

        .label-container {
            border: 2px dashed #000;
            padding: 20px;
            width: 400px;
            margin: 0 auto;
            border-radius: 10px;
        }

        .header {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
            text-transform: uppercase;
            border-bottom: 2px solid #000;
            padding-bottom: 10px;
        }

        .status {
            background-color: #000;
            color: #fff;
            font-size: 18px;
            font-weight: bold;
            padding: 5px;
            margin: 15px 0;
            display: inline-block;
        }

        .info {
            text-align: left;
            margin-top: 20px;
            line-height: 1.6;
            font-size: 16px;
        }

            .info strong {
                display: inline-block;
                width: 100px;
            }

        .barcode {
            margin-top: 20px;
            font-size: 30px;
            font-family: 'Libre Barcode 39', cursive;
        }

        @@media print {
            .no-print {
                display: none;
            }
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Barcode+39&display=swap" rel="stylesheet">
</head>
<body onload="window.print()">

    <button class="no-print" onclick="window.print()" style="padding: 10px 20px; font-size: 16px; margin-bottom: 20px; cursor: pointer;">Yazdır</button>

    <div class="label-container">
        <div class="header">TEKNİK SERVİS</div>

        <div class="status">SEVKİYATA HAZIR</div>

        <div class="info">
            <div><strong>Fiş No:</strong> @Model.FisNo</div>
            <div><strong>Müşteri:</strong> @Model.Customer?.FirstName @Model.Customer?.LastName</div>
            <div><strong>Telefon:</strong> @Model.Customer?.Phone</div>
            <div><strong>Cihaz:</strong> @Model.DeviceBrand?.Name @Model.DeviceModel</div>
            <div><strong>Tarih:</strong> @DateTime.Now.ToString("dd.MM.yyyy")</div>
            <div style="margin-top:10px; border-top:1px solid #ccc; padding-top:5px;">
                <strong>Tutar:</strong> @Model.TotalPrice?.ToString("C2")
            </div>
        </div>

        <div class="barcode">*@Model.FisNo*</div>
        <small style="font-size: 10px;">Lütfen kargo paketinin üzerine yapıştırınız.</small>
    </div>

</body>
</html>