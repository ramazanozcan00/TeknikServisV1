@model IEnumerable<TeknikServis.Core.Entities.ServiceTicket>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Toplu Teslimat Listesi</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            padding: 20px;
            color: #333;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 2px solid #000;
            padding-bottom: 15px;
        }

            .header h1 {
                margin: 0;
                font-size: 24px;
                text-transform: uppercase;
                letter-spacing: 1px;
            }

            .header p {
                margin: 5px 0 0;
                font-size: 14px;
                color: #666;
            }

        .meta-info {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
            font-size: 14px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
            font-size: 13px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f4f4f4;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 12px;
        }

        .signatures {
            display: flex;
            justify-content: space-between;
            margin-top: 50px;
            page-break-inside: avoid;
        }

        .sig-box {
            width: 40%;
            text-align: center;
        }

        .sig-line {
            height: 40px;
            border-bottom: 1px solid #000;
            margin-top: 40px;
        }

        @@media print {
            .no-print

        {
            display: none;
        }

        body {
            padding: 0;
        }

        th {
            background-color: #eee !important;
            -webkit-print-color-adjust: exact;
        }

        }
    </style>
</head>
<body>

    <div class="no-print" style="text-align: center; margin-bottom: 20px;">
        <button onclick="window.print()" style="padding: 10px 20px; background: #000; color: #fff; border: none; cursor: pointer; border-radius: 4px;">LİSTEYİ YAZDIR</button>
    </div>

    <div class="container">
        <div class="header">
            <h1>Toplu Sevkiyat / Teslimat Listesi</h1>
            <p>Aşağıda dökümü bulunan cihazlar eksiksiz ve sağlam olarak teslim edilmiştir.</p>
        </div>

        <div class="meta-info">
            <div><strong>Tarih:</strong> @DateTime.Now.ToString("dd.MM.yyyy HH:mm")</div>
            <div><strong>Toplam Adet:</strong> @Model.Count()</div>
        </div>

        <table>
            <thead>
                <tr>
                    <th style="width: 30px;">#</th>
                    <th style="width: 100px;">Fiş No</th>
                    <th>Müşteri Adı Soyadı</th>
                    <th>Cihaz Bilgisi</th>
                    <th style="width: 150px;">Teslim Alan (İmza)</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int counter = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align: center;">@counter</td>
                        <td><strong>@item.FisNo</strong></td>
                        <td>@item.Customer?.FirstName @item.Customer?.LastName</td>
                        <td>@item.DeviceBrand?.Name @item.DeviceModel</td>
                        <td></td>
                    </tr>
                    counter++;
                }
            </tbody>
        </table>

        <div class="signatures">
            <div class="sig-box">
                <strong>TESLİM EDEN</strong><br>
                (Firma Yetkilisi)
                <div class="sig-line"></div>
            </div>
            <div class="sig-box">
                <strong>TESLİM ALAN</strong><br>
                (Kurye / Müşteri / Firma)
                <div class="sig-line"></div>
            </div>
        </div>
    </div>

</body>
</html>