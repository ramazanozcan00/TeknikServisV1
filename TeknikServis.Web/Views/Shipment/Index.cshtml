@model IEnumerable<TeknikServis.Core.Entities.ServiceTicket>
@{
    ViewData["Title"] = "Sevkiyat Yönetimi";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}

<div class="container-fluid p-4">

    <form id="shipmentForm" method="post" target="_blank">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="fw-bold mb-0 text-secondary"><i class="fa-solid fa-truck-fast me-2"></i>Sevkiyat Paneli</h4>
                <small class="text-muted">Tamamlanan ve kargolanan cihazların takibi</small>
            </div>
            <div>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#printModal">
                    <i class="fa-solid fa-print me-2"></i>Seçilenleri Yazdır
                </button>
            </div>
        </div>

        <div class="card shadow-sm mb-3">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-secondary">
                            <tr>
                                <th style="width: 40px;" class="ps-4">
                                    <input type="checkbox" class="form-check-input" id="selectAll" onclick="toggleAll(this)" />
                                </th>
                                <th>Fiş No</th>
                                <th>Müşteri</th>
                                <th>Cihaz</th>
                                <th>Durum</th>
                                <th class="text-end pe-4">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <input type="checkbox" name="selectedIds" value="@item.Id" class="form-check-input item-check" />
                                        </td>
                                        <td class="fw-bold text-primary">@item.FisNo</td>
                                        <td>
                                            <div class="fw-bold">
                                                @item.Customer?.FirstName @item.Customer?.LastName

                                                @* --- Firma İsmi Eklendi --- *@
                                                @if (!string.IsNullOrEmpty(item.Customer?.CompanyName))
                                                {
                                                    <span class="text-muted small fw-normal">(@item.Customer.CompanyName)</span>
                                                }
                                            </div>
                                            <small class="text-muted">@item.Customer?.Phone</small>
                                        </td>
                                        <td>@item.DeviceBrand?.Name @item.DeviceModel</td>
                                        <td>
                                            @if (item.Status == "Tamamlandı")
                                            {
                                                <span class="badge bg-warning text-dark">Sevk Bekliyor</span>
                                            }
                                            else if (item.Status == "Kargolandı")
                                            {
                                                <span class="badge bg-info text-dark">Kargoda</span>
                                            }
                                        </td>
                                        <td class="text-end pe-4">
                                            <a asp-action="PrintLabel" asp-route-id="@item.Id" target="_blank" class="btn btn-sm btn-outline-secondary" title="Fiş Yazdır">
                                                <i class="fa-solid fa-print"></i>
                                            </a>

                                            <button type="button" class="btn btn-sm btn-success ms-1" onclick="updateSingleStatus('@item.Id', 'Teslim Edildi')">
                                                <i class="fa-solid fa-check me-1"></i>Teslim Edildi
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="6" class="text-center py-5 text-muted">Kayıt yok.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        @if (totalPages > 1)
        {
            <nav aria-label="Sayfalama">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1 })" aria-label="Önceki">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                        </li>
                    }

                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1 })" aria-label="Sonraki">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        }

    </form>
</div>

<div class="modal fade" id="printModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="modal-title fw-bold"><i class="fa-solid fa-print me-2"></i>Yazdırma Seçenekleri</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body text-center p-4">
                <p class="mb-4 text-muted">Seçilen kayıtlar için yazdırma formatını belirleyiniz:</p>
                <div class="d-grid gap-3">
                    <button type="button" class="btn btn-outline-primary py-3" onclick="submitForm('BulkPrint')">
                        <i class="fa-solid fa-file-invoice fa-xl mb-2 d-block"></i>
                        <strong>Ayrı Ayrı Fiş Olarak Yazdır</strong>
                        <div class="small text-muted">Her cihaz için ayrı bir sayfa/etiket basılır.</div>
                    </button>
                    <button type="button" class="btn btn-outline-success py-3" onclick="submitForm('DeliveryList')">
                        <i class="fa-solid fa-clipboard-list fa-xl mb-2 d-block"></i>
                        <strong>Teslimat Listesi Olarak Yazdır</strong>
                        <div class="small text-muted">Tüm cihazlar tek bir listede imza karşılığı teslim edilir.</div>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Tümünü Seç
    function toggleAll(source) {
        var checkboxes = document.getElementsByClassName('item-check');
        for(var i=0, n=checkboxes.length;i<n;i++) {
            checkboxes[i].checked = source.checked;
        }
    }

    // Toplu İşlem
    function submitForm(actionName) {
        var form = document.getElementById('shipmentForm');
        var checkboxes = document.querySelectorAll('.item-check:checked');
        if (checkboxes.length === 0) {
            alert("Lütfen en az bir kayıt seçiniz!");
            var modalEl = document.getElementById('printModal');
            var modal = bootstrap.Modal.getInstance(modalEl);
            modal.hide();
            return;
        }
        form.action = '/Shipment/' + actionName;
        form.submit();
        var modalEl = document.getElementById('printModal');
        var modal = bootstrap.Modal.getInstance(modalEl);
        modal.hide();
    }

    // Tekli Durum Güncelleme
    function updateSingleStatus(id, status) {
        if (confirm('Cihaz durumu "' + status + '" olarak güncellensin mi?')) {
            var form = document.createElement('form');
            form.method = 'post';
            form.action = '/Shipment/UpdateStatus';
            var fieldId = document.createElement('input');
            fieldId.type = 'hidden'; fieldId.name = 'id'; fieldId.value = id;
            form.appendChild(fieldId);
            var fieldStatus = document.createElement('input');
            fieldStatus.type = 'hidden'; fieldStatus.name = 'status'; fieldStatus.value = status;
            form.appendChild(fieldStatus);
            document.body.appendChild(form);
            form.submit();
        }
    }
</script>