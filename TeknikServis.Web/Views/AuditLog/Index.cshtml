@model IEnumerable<TeknikServis.Core.Entities.AuditLog>

@{
    ViewData["Title"] = "İşlem Geçmişi";
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
}

<div class="container mt-4">

    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0 fw-bold">
                <i class="fa-solid fa-clock-rotate-left me-2"></i>İşlem Geçmişi (Loglar)
            </h5>
            <span class="badge bg-white text-primary shadow-sm">Sayfa: @currentPage / @totalPages</span>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead class="bg-light border-bottom">
                        <tr class="text-muted small text-uppercase">
                            <th class="ps-4 py-3" style="width: 160px;">Tarih</th>
                            <th>Kullanıcı</th>
                            <th>Modül</th>
                            <th>İşlem</th>
                            <th>Açıklama</th>
                            <th class="text-end pe-4">IP Adresi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            // İşlem tipine göre renk ve ikon belirleme
                            string badgeClass = "bg-secondary";
                            string icon = "fa-circle";

                            if (item.Action == "Ekleme")
                            {
                                badgeClass = "bg-success";
                                icon = "fa-plus-circle";
                            }
                            else if (item.Action == "Güncelleme" || item.Action == "Düzenleme")
                            {
                                badgeClass = "bg-warning text-dark";
                                icon = "fa-pen-to-square";
                            }
                            else if (item.Action == "Silme")
                            {
                                badgeClass = "bg-danger";
                                icon = "fa-trash-can";
                            }
                            else if (item.Action.Contains("Giriş"))
                            {
                                badgeClass = "bg-info text-dark";
                                icon = "fa-right-to-bracket";
                            }

                            <tr>
                                <td class="ps-4 text-secondary fw-bold" style="font-size: 0.9rem;">
                                    @item.CreatedDate.ToString("dd.MM.yyyy")
                                    <span class="text-muted fw-normal small ms-1">@item.CreatedDate.ToString("HH:mm")</span>
                                </td>

                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center border me-2" style="width: 32px; height: 32px;">
                                            <i class="fa-solid fa-user text-secondary small"></i>
                                        </div>
                                        <span class="fw-bold text-dark">@item.UserName</span>
                                    </div>
                                </td>

                                <td>
                                    <span class="badge bg-light text-dark border">
                                        @item.Module
                                    </span>
                                </td>

                                <td>
                                    <span class="badge @badgeClass shadow-sm" style="min-width: 80px;">
                                        <i class="fa-solid @icon me-1"></i>@item.Action
                                    </span>
                                </td>

                                <td class="text-muted small">
                                    @item.Description
                                </td>

                                <td class="text-end pe-4 font-monospace small text-secondary">
                                    @item.IpAddress
                                </td>
                            </tr>
                        }

                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <i class="fa-solid fa-file-circle-xmark fs-1 mb-3 opacity-25"></i>
                                    <p class="mb-0">Henüz kayıtlı bir işlem geçmişi bulunmuyor.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @if (totalPages > 1)
        {
            <div class="card-footer bg-white py-3 border-top">
                <nav aria-label="Sayfalama">
                    <ul class="pagination justify-content-center mb-0 shadow-sm">

                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link border-0" asp-action="Index" asp-route-page="@(currentPage - 1)">
                                <i class="fa-solid fa-chevron-left small"></i>
                            </a>
                        </li>

                        @for (int i = 1; i <= totalPages; i++)
                        {
                            // Sadece mevcut sayfanın yakınındakileri göster (1 ... 4 5 6 ... 10)
                            if (i == 1 || i == totalPages || (i >= currentPage - 2 && i <= currentPage + 2))
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <a class="page-link border-0 @(i == currentPage ? "fw-bold" : "")" asp-action="Index" asp-route-page="@i">@i</a>
                                </li>
                            }
                            else if (i == currentPage - 3 || i == currentPage + 3)
                            {
                                <li class="page-item disabled"><span class="page-link border-0">...</span></li>
                            }
                        }

                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link border-0" asp-action="Index" asp-route-page="@(currentPage + 1)">
                                <i class="fa-solid fa-chevron-right small"></i>
                            </a>
                        </li>

                    </ul>
                </nav>
            </div>
        }
    </div>
</div>