@model TeknikServis.Web.Models.CompanyInfoViewModel

@{
    ViewData["Title"] = "Şube Profilim";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 mb-4 text-center">
                <div class="card-body p-4">
                    <div class="mb-3">
                        <div class="avatar bg-light rounded-circle d-inline-flex align-items-center justify-content-center text-primary" style="width: 80px; height: 80px;">
                            <i class="fa-solid fa-store fa-2x"></i>
                        </div>
                    </div>
                    <h4 class="fw-bold mb-1">@ViewBag.BranchName</h4>
                    <p class="text-muted small">Şube Kimliği</p>
                    <hr class="my-4" />

                    <div class="text-start">
                        <h6 class="text-uppercase text-muted small fw-bold mb-3"><i class="fa-solid fa-key me-2"></i>Lisans Durumu</h6>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Durum:</span>
                            @if (Model.IsLicenseActive)
                            {
                                <span class="badge bg-success rounded-pill px-3">AKTİF</span>
                            }
                            else
                            {

                                <span class="badge bg-danger rounded-pill px-3">PASİF</span>
                            }
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Bitiş:</span>
                            <span class="fw-bold">@Model.LicenseEndDate.ToString("dd.MM.yyyy")</span>
                        </div>
                        <div class="mt-3">
                            <div class="progress" style="height: 6px;">
                                @{
                                    int total = 365;
                                    int rem = Model.RemainingDays > 0 ? Model.RemainingDays : 0;
                                    int pct = (rem * 100) / total;
                                    if (pct > 100) pct = 100;
                                }
                                <div class="progress-bar @(rem < 30 ? "bg-danger" : "bg-primary")" role="progressbar" style="width: @pct%"></div>
                            </div>
                            <small class="text-muted mt-1 d-block text-end">Kalan: @Model.RemainingDays Gün</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 text-primary"><i class="fa-solid fa-pen-to-square me-2"></i>Fatura & İletişim Bilgileri</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Save" method="post">
                        <input type="hidden" asp-for="Setting.Id" />
                        <input type="hidden" asp-for="Setting.BranchId" />

                        <div class="mb-4 text-center">
                            <div class="btn-group w-100" role="group">
                                <input type="radio" class="btn-check" name="Setting.AccountType" id="typeCorporate" value="Corporate" @(Model.Setting.AccountType == TeknikServis.Core.Entities.AccountType.Corporate ? "checked" : "") onchange="toggleFields()">
                                <label class="btn btn-outline-primary py-2" for="typeCorporate"><i class="fa-solid fa-building me-2"></i>Kurumsal</label>

                                <input type="radio" class="btn-check" name="Setting.AccountType" id="typeIndividual" value="Individual" @(Model.Setting.AccountType == TeknikServis.Core.Entities.AccountType.Individual ? "checked" : "") onchange="toggleFields()">
                                <label class="btn btn-outline-primary py-2" for="typeIndividual"><i class="fa-solid fa-user me-2"></i>Bireysel</label>
                            </div>
                        </div>

                        <div id="corporateFields">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Firma/Şube Ünvanı</label>
                                <input asp-for="Setting.CompanyName" class="form-control bg-light" placeholder="Fatura başlığı..." />
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Vergi Dairesi</label>
                                    <input asp-for="Setting.TaxOffice" class="form-control bg-light" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Vergi No</label>
                                    <input asp-for="Setting.TaxNumber" class="form-control bg-light" />
                                </div>
                            </div>
                        </div>

                        <div id="individualFields" style="display:none;">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Ad</label>
                                    <input asp-for="Setting.FirstName" class="form-control bg-light" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Soyad</label>
                                    <input asp-for="Setting.LastName" class="form-control bg-light" />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">TC Kimlik No</label>
                                <input asp-for="Setting.TCNo" class="form-control bg-light" maxlength="11" />
                            </div>
                        </div>

                        <hr class="text-muted my-4" />

                        <h6 class="text-muted mb-3">İletişim</h6>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Telefon</label>
                                <input asp-for="Setting.Phone" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">E-Posta</label>
                                <input asp-for="Setting.Email" class="form-control" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Adres</label>
                            <textarea asp-for="Setting.Address" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-primary px-4"><i class="fa-solid fa-check me-2"></i>Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleFields() {
            if (document.getElementById('typeIndividual').checked) {
                $('#corporateFields').hide();
                $('#individualFields').fadeIn();
            } else {
                $('#individualFields').hide();
                $('#corporateFields').fadeIn();
            }
        }
        document.addEventListener("DOMContentLoaded", function() { toggleFields(); });
    </script>
}