@{
    ViewData["Title"] = "Sorgulama";
    Layout = null; // Layoutsuz, tek sayfa
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cihaz Durumu Sorgula</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            background-color: #eef2f7;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        .search-card {
            max-width: 500px;
            width: 100%;
            border-radius: 15px;
            overflow: hidden;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card search-card shadow-lg border-0">
                    <div class="card-header bg-primary text-white text-center py-4">
                        <h3 class="mb-0"><i class="fa-solid fa-magnifying-glass me-2"></i>Servis Sorgulama</h3>
                    </div>
                    <div class="card-body p-5">

                        @* HATA MESAJI BLOĞU *@
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger text-center shadow-sm">
                                <i class="fa-solid fa-triangle-exclamation me-2"></i>@ViewBag.Error
                            </div>
                        }

                        @* --- YENİ EKLENEN: BAŞARI MESAJI BLOĞU --- *@
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-success text-center shadow-sm">
                                <i class="fa-solid fa-circle-check me-2"></i>@ViewBag.Message
                            </div>
                        }
                        @* ----------------------------------------- *@

                        <form method="post">
                            <div class="form-floating mb-3">
                                <input type="text" name="query" class="form-control text-center fw-bold fs-5" id="queryInput" placeholder="Fiş No" required>
                                <label for="queryInput" class="w-100 text-center">Fiş No veya Seri No Giriniz</label>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg shadow-sm">SORGULA</button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer bg-light text-center py-3 text-muted small">
                        &copy; @DateTime.Now.Year - Teknik Servis Hizmetleri
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>