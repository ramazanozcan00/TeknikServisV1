@model TeknikServis.Sorgulama.Controllers.TicketResultViewModel

@{
    ViewData["Title"] = "Sorgulama Sonucu";
    Layout = null; // Layout iptal edildi (Menü ve Footer kalktı)
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            background-color: #eef2f7;
            padding-top: 40px;
            padding-bottom: 40px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">

                @* Hata ve Başarı Mesajları *@
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center shadow-sm">@ViewBag.Error</div>
                }
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success text-center shadow-sm">
                        <i class="fa-solid fa-check-circle me-2"></i>@ViewBag.Message
                    </div>
                }

                <div class="card shadow-lg border-0 rounded-3">
                    <div class="card-header bg-primary text-white text-center py-3">
                        <h4 class="mb-0 fw-bold">Servis Durumu: @Model.FisNo</h4>
                    </div>
                    <div class="card-body p-4">

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong class="d-block text-muted">Cihaz:</strong>
                                <span class="fs-5 fw-bold text-dark">@Model.Cihaz</span>
                            </div>
                            <div class="col-md-6 text-md-end">
                                <strong class="d-block text-muted">Seri No:</strong>
                                <span>@Model.SeriNo</span>
                            </div>
                        </div>

                        <div class="alert alert-light border text-center">
                            <h5 class="fw-bold text-dark mb-0">Durum: <span class="badge bg-info text-dark">@Model.Durum</span></h5>
                            @* Arıza bilgisi kaldırıldı *@
                        </div>

                        <hr />

                        <div class="row text-center mt-3">
                            <div class="col-6">
                                <small class="text-muted">Giriş Tarihi</small><br />
                                <strong>@Model.GirisTarihi</strong>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Servis Ücreti</small><br />
                                <strong class="text-success fs-4">@Model.Ucret ₺</strong>
                            </div>
                        </div>

                        @* --- IYZICO ÖDEME ALANI --- *@
                        @if (Model.Durum == "Ödeme Bekleniyor")
                        {
                            <div class="card border-warning mt-4 bg-warning bg-opacity-10">
                                <div class="card-body text-center">
                                    <h4 class="text-warning fw-bold"><i class="fa-solid fa-credit-card me-2"></i>Online Ödeme</h4>
                                    <p class="fs-6 mt-2 text-dark">
                                        Cihazınızın teslimatı için kalan ödemeyi güvenle yapabilirsiniz.
                                    </p>

                                    <form asp-controller="Home" asp-action="StartPayment" method="post" class="mt-3">
                                        <input type="hidden" name="fisNo" value="@Model.FisNo" />
                                        <input type="hidden" name="ucret" value="@Model.Ucret" />
                                        <input type="hidden" name="cihaz" value="@Model.Cihaz" />

                                        <button type="submit" class="btn btn-success btn-lg px-5 shadow-sm hover-scale fw-bold">
                                            <i class="fa-solid fa-lock me-2"></i>Güvenli Ödeme Yap
                                        </button>
                                    </form>

                                    <div class="mt-3 opacity-75">
                                        <small class="text-muted">Ödeme altyapısı <strong>iyzico</strong> tarafından sağlanmaktadır.</small>
                                    </div>
                                </div>
                            </div>
                        }
                        else if (Model.Durum == "Ödeme Yapıldı")
                        {
                            <div class="alert alert-success text-center mt-4 border-success">
                                <i class="fa-solid fa-circle-check fa-3x mb-3 text-success"></i><br />
                                <h4 class="alert-heading fw-bold">Ödeme Başarıyla Alındı!</h4>
                                <p class="mb-0">Cihazin teslimati icin bilgi verilecektir</p>
                            </div>
                        }
                        @* ------------------------- *@

                    </div>
                    <div class="card-footer bg-white text-center py-3">
                        <a href="/" class="btn btn-outline-secondary">Yeni Sorgulama Yap</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>