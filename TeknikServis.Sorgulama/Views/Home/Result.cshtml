@model TeknikServis.Sorgulama.Controllers.TicketResultViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sonuç</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body class="bg-light py-5">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0 rounded-3">
                    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center py-3">
                        <h5 class="mb-0">Sorgu Sonucu</h5>
                        <a href="/" class="btn btn-sm btn-light text-success fw-bold">Yeni Sorgu</a>
                    </div>
                    <div class="card-body p-4">

                        <div class="text-center mb-4">
                            <span class="badge bg-dark fs-5 mb-2">@Model.FisNo</span>
                            <h3 class="fw-bold text-primary">@Model.Cihaz</h3>
                            <div class="text-muted">SN: @Model.SeriNo</div>
                        </div>

                        <ul class="list-group list-group-flush mb-4">
                            <li class="list-group-item d-flex justify-content-between">
                                <span class="fw-bold text-secondary">Durum:</span>
                                <span class="badge bg-info text-dark fs-6">@Model.Durum</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span class="fw-bold text-secondary">Giriş Tarihi:</span>
                                <span>@Model.GirisTarihi</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span class="fw-bold text-secondary">Tahmini Teslim:</span>
                                <span class="text-danger fw-bold">@Model.TahminiTeslim</span>
                            </li>
                            <li class="list-group-item">
                                <span class="fw-bold text-secondary d-block mb-1">Arıza / İşlem:</span>
                                <p class="mb-0 text-dark small">@Model.Ariza</p>
                            </li>
                        </ul>
                        @* Durum "Ödeme Bekliyor" ise veya "Tamamlandı" ise ücreti göster *@
                        @if (Model.Durum == "Ödeme Bekliyor" || Model.Durum == "Tamamlandı")
                        {
                            <div class="alert alert-success text-center fw-bold">
                                Toplam Tutar: @Model.Ucret
                            </div>

                            @* Ödeme Butonu SADECE "Ödeme Bekliyor" ise çıksın *@
                            @if (Model.Durum == "Ödeme Bekliyor" && !string.IsNullOrEmpty(Model.Ucret) && Model.Ucret != "0" && Model.Ucret != "0 TL")
                            {
                                <div class="text-center mt-3">
                                    <form asp-action="StartPayment" asp-controller="Home" method="post">
                                        <input type="hidden" name="fisNo" value="@Model.FisNo" />
                                        <input type="hidden" name="ucret" value="@Model.Ucret" />
                                        <input type="hidden" name="cihaz" value="@Model.Cihaz" />

                                        <button type="submit" class="btn btn-primary btn-lg shadow pulse-button">
                                            <i class="fa-regular fa-credit-card me-2"></i>Kredi Kartı ile Öde
                                        </button>
                                    </form>
                                    <div class="small text-muted mt-2">
                                        <i class="fa-solid fa-lock"></i> Ödemeler Iyzico güvencesiyle alınmaktadır.
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>